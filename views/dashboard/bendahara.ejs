<%- contentFor('body') %>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-4">
    <div class="border-2 border-dashed rounded-lg border-gray-300 h-32 md:h-40 flex flex-col justify-center items-center bg-white hover:bg-gray-50 transition-all">
        <i class="fas fa-money-bill-wave text-3xl text-green-500 mb-2"></i>
        <h3 class="text-lg font-semibold">Total Pembayaran</h3>
        <p class="text-2xl font-bold text-green-600">Rp 0</p>
    </div>
    <div class="border-2 border-dashed rounded-lg border-gray-300 h-32 md:h-40 flex flex-col justify-center items-center bg-white hover:bg-gray-50 transition-all">
        <i class="fas fa-check-circle text-3xl text-blue-500 mb-2"></i>
        <h3 class="text-lg font-semibold">Pembayaran Terverifikasi</h3>
        <p class="text-2xl font-bold text-blue-600">0</p>
    </div>
    <div class="border-2 border-dashed rounded-lg border-gray-300 h-32 md:h-40 flex flex-col justify-center items-center bg-white hover:bg-gray-50 transition-all">
        <i class="fas fa-clock text-3xl text-yellow-500 mb-2"></i>
        <h3 class="text-lg font-semibold">Menunggu Verifikasi</h3>
        <p class="text-2xl font-bold text-yellow-600">0</p>
    </div>
</div>

<div class="grid grid-cols-1 gap-4 mb-4">
    <div class="border-2 border-dashed rounded-lg border-gray-300 h-96 p-4 bg-white">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold">Pembayaran Terbaru</h3>
            <div class="flex space-x-2">
                <button type="button" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <i class="fas fa-filter mr-2"></i>Filter
                </button>
                <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-gray-300">
                    <i class="fas fa-download mr-2"></i>Export
                </button>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Tanggal</th>
                        <th scope="col" class="px-6 py-3">Nama</th>
                        <th scope="col" class="px-6 py-3">Jumlah</th>
                        <th scope="col" class="px-6 py-3">Metode</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-6 py-4" colspan="6">Belum ada data pembayaran</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
    <div class="border-2 border-dashed rounded-lg border-gray-300 h-96 p-4 bg-white">
        <h3 class="text-xl font-semibold mb-4">Grafik Pembayaran Bulanan</h3>
        <p class="text-center text-gray-500 mt-20">Grafik akan ditampilkan di sini</p>
    </div>
    <div class="border-2 border-dashed rounded-lg border-gray-300 h-96 p-4 bg-white">
        <h3 class="text-xl font-semibold mb-4">Metode Pembayaran</h3>
        <p class="text-center text-gray-500 mt-20">Grafik akan ditampilkan di sini</p>
    </div>
</div>
