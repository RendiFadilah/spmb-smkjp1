<!-- Welcome Section -->
<div class="bg-gradient-to-br from-green-50 via-white to-blue-50 rounded-xl shadow-sm border border-gray-100 overflow-hidden my-8">
    <div class="relative p-6">
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-green-200/20 to-blue-200/20 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-blue-200/20 to-green-200/20 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
        
        <!-- Content -->
        <div class="relative">
            <div class="flex items-center gap-4 mb-3">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center text-white text-xl font-semibold shadow-lg">
                    <%= user.nama.charAt(0).toUpperCase() %>
                </div>
                <div>
                    <h3 class="text-sm text-gray-600">Selamat datang kembali,</h3>
                    <h2 class="text-xl font-semibold text-gray-800"><%= user.nama %></h2>
                </div>
            </div>
            <p class="text-gray-600 max-w-xl">
                Selamat datang di Portal SPMB SMK Jakarta Pusat 1. Silakan lengkapi proses pendaftaran Anda dengan mengikuti alur yang telah disediakan.
            </p>
        </div>
    </div>
</div>

<!-- Registration Period -->
<div class="bg-white rounded-xl shadow-sm p-6 mb-6 border border-gray-100">
    
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="space-y-4">
            <h2 class="text-xl font-semibold text-gray-800">Periode Pendaftaran</h2>
            <div class="flex items-center text-gray-700">
                <i class="fas fa-calendar-alt w-5 text-green-700 mr-2"></i>
                <span>14 Februari 2025 - 10 Juli 2025</span>
            </div>
        </div>
        <a href="/dashboard/cpdb/pendaftaran" 
           class="group relative inline-flex items-center justify-center overflow-hidden rounded-xl bg-gradient-to-br from-green-500 to-green-600 p-0.5 font-semibold text-white transition-all duration-300 ease-in-out hover:bg-gradient-to-br hover:from-green-600 hover:to-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
            <span class="relative flex items-center gap-2 rounded-[0.7rem] bg-gradient-to-br from-green-500 to-green-600 px-6 py-3 transition-all duration-300 ease-in-out group-hover:bg-opacity-0">
                <i class="fas fa-edit text-lg"></i>
                <span class="font-medium">Daftar Sekarang</span>
                <i class="fas fa-arrow-right transition-transform duration-300 group-hover:translate-x-1"></i>
            </span>
        </a>
    </div>
</div>

<!-- Program Statistics -->
 <div>
    <h2 class="text-xl font-semibold text-gray-800">Statistik Program Keahlian</h2>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
<% for (const jurusan of stats.jurusan) { %>
    <div class="stat-card bg-white rounded-xl shadow-sm hover:shadow-md transition-all p-6 border border-gray-100">
        <div class="flex items-center justify-between mb-4">
            <h4 class="font-semibold text-gray-800"><%= jurusan.nama %></h4>
            <span class="text-sm font-medium text-white bg-<%= jurusan.warna %>-600 rounded-full px-3 py-1"><%= jurusan.kode %></span>
        </div>
        <div class="space-y-2">
            <div class="flex justify-between items-center">
                <span class="text-gray-600">Kuota</span>
                <span class="font-medium text-gray-800"><%= jurusan.kapasitas %></span>
            </div>
            <div class="flex justify-between items-center">
                <span class="text-gray-600">Sisa</span>
                <span class="font-medium text-gray-800"><%= jurusan.sisa_kapasitas %></span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5 mt-2">
                <div class="progress-bar bg-<%= jurusan.warna %>-600 h-2.5 rounded-full" style="width: <%= Math.round(((jurusan.kapasitas - jurusan.sisa_kapasitas) / jurusan.kapasitas) * 100) %>%"></div>
            </div>
        </div>
    </div>
<% } %>
</div>
</div>

<style>
.stat-card {
    animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.progress-bar {
    transition: width 1s ease-in-out;
}
</style>
