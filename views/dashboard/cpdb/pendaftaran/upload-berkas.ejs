<!-- Toast Containers -->
<div id="toastContainer" class="fixed top-4 right-4 z-50"></div>
<div id="confirmContainer" class="fixed inset-0 flex items-center justify-center z-50 pointer-events-none">
    <div class="pointer-events-auto"></div>
</div>

<div class="max-w-7xl mx-auto py-8">
    <!-- Header Section -->
    <div class="text-center mb-8">
        <h3 class="text-2xl font-bold text-gray-800 mb-3">Upload Berkas Pendaftaran</h3>
        <div class="h-1 w-20 bg-gradient-to-r from-green-400 to-green-600 mx-auto rounded-full mb-4"></div>
        <p class="text-gray-600">Upload berkas pendaftaran dalam format PDF (maksimal 5MB)</p>
    </div>

    <% if (!berkasData) { %>
    <!-- Information Box -->
    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-8 rounded-lg">
        <div class="flex items-start">
            <div class="flex-shrink-0">
                <i class="fas fa-info-circle text-blue-500 mt-1"></i>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">Informasi Penting</h3>
                <div class="mt-2 text-sm text-blue-700">
                    <p class="mb-2">Upload berkas dijadikan 1 file PDF dengan urutan sebagai berikut:</p>
                    <ol class="list-decimal list-inside space-y-1 ml-2">
                        <li>FC Ijazah Negeri / Swasta yang sudah Legalisir</li>
                        <li>FC Nomor Induk Siswa Nasional</li>
                        <li>FC Raport Semester Ganjil dan Genap SMP/MTs Kelas Terakhir</li>
                        <li>FC Akte Kelahiran</li>
                        <li>FC Kartu Keluarga (KK)</li>
                    </ol>
                    <p class="mt-4 font-medium">Catatan: Upload berkas bersifat opsional. CPDB dapat menyerahkan berkas secara langsung dengan datang ke sekolah.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Section -->
    <div class="bg-white rounded-xl shadow-lg p-6">
       
            <!-- Upload Form when no file uploaded yet -->
            <form id="uploadForm" class="space-y-6" enctype="multipart/form-data">
                <input type="hidden" name="id_formulir" value="<%= user?.formulir?.id_formulir %>">
                <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center">
                    <input type="file" 
                           id="berkas" 
                           name="berkas" 
                           accept=".pdf"
                           class="hidden" 
                           onchange="handleFileSelect(this)">
                    <label for="berkas" class="cursor-pointer">
                        <div class="space-y-4">
                            <i class="fas fa-cloud-upload-alt text-4xl text-gray-400"></i>
                            <div class="text-gray-600">
                                <span class="font-medium">Klik untuk upload</span> atau drag and drop
                                <p class="text-sm text-gray-500">PDF (Maks. 5MB)</p>
                            </div>
                        </div>
                    </label>
                    <div id="fileInfo" class="mt-4 hidden">
                        <p class="text-sm text-gray-600">File terpilih: <span id="fileName" class="font-medium"></span></p>
                    </div>
                </div>

                <div class="flex justify-end space-x-4">
                    <button type="button" 
                            onclick="submitWithoutFile()"
                            class="px-6 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                        Serahkan Berkas Langsung
                    </button>
                    <button type="submit" 
                            class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                        Upload Berkas
                    </button>
                </div>
            </form>
        <% } else { %>
            <!-- Display when file is already uploaded -->
            <div class="space-y-6">
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                    <div class="flex items-center space-x-4">
                        <i class="<%= berkasData.nama_file ? 'fas fa-file-pdf text-red-500' : 'fas fa-box-open text-blue-500' %> text-2xl"></i>
                        <div>
                            <% if (berkasData.nama_file) { %>
                                <p class="font-medium text-gray-900"><%= berkasData.nama_file %></p>
                                <p class="text-sm text-gray-500">Diupload pada: <%= new Date(berkasData.created_at).toLocaleDateString('id-ID') %></p>
                            <% } else { %>
                                <p class="font-medium text-gray-900">Berkas akan diserahkan langsung</p>
                                <p class="text-sm text-gray-500">Terdaftar pada: <%= new Date(berkasData.created_at).toLocaleDateString('id-ID') %></p>
                            <% } %>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3">
                        <% if (berkasData.nama_file) { %>
                            <a href="/uploads/berkas/<%= berkasData.nama_file %>" 
                               target="_blank"
                               class="px-4 py-2 text-sm text-blue-600 hover:text-blue-700 focus:outline-none">
                                <i class="fas fa-eye mr-2"></i>Preview
                            </a>
                        <% } else { %>
                            <span class="text-sm text-gray-500">
                                <i class="fas fa-info-circle mr-2"></i>Berkas akan diserahkan langsung
                            </span>
                        <% } %>
                        <button onclick="deleteBerkas('<%= berkasData.id_berkas %>')"
                                class="px-4 py-2 text-sm text-red-600 hover:text-red-700 focus:outline-none">
                            <i class="fas fa-trash-alt mr-2"></i>Hapus
                        </button>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
function showToast(message, type = 'success') {
    const container = document.getElementById('toastContainer');
    const toast = document.createElement('div');
    
    const bgColor = type === 'success' ? 'bg-green-500' : type === 'warning' ? 'bg-yellow-500' : 'bg-red-500';
    const icon = type === 'success' ? 'fa-check-circle' : type === 'warning' ? 'fa-exclamation-triangle' : 'fa-exclamation-circle';
    
    toast.className = `${bgColor} text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 mb-4 transform translate-x-full transition-transform duration-300`;
    toast.innerHTML = `
        <i class="fas ${icon}"></i>
        <span>${message}</span>
    `;
    
    container.appendChild(toast);
    
    // Animate in
    setTimeout(() => {
        toast.classList.remove('translate-x-full');
    }, 100);
    
    // Remove after 5 seconds
    setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
            container.removeChild(toast);
        }, 300);
    }, 5000);
}

// Submit without file function
async function submitWithoutFile() {
    const formData = new FormData();
    formData.append('id_formulir', document.querySelector('input[name="id_formulir"]').value);
    
    try {
        const response = await fetch('/api/cpdb/berkas/upload', {
            method: 'POST',
            body: formData
        });
        
        const data = await response.json();
        
        if (data.success) {
            showToast(data.message);
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            showToast(data.message || 'Terjadi kesalahan', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        showToast('Terjadi kesalahan saat menyimpan data', 'error');
    }
}

// File selection handler
function handleFileSelect(input) {
    const fileInfo = document.getElementById('fileInfo');
    const fileName = document.getElementById('fileName');
    
    if (input.files && input.files[0]) {
        const file = input.files[0];
        
        if (file.type !== 'application/pdf') {
            showToast('Hanya file PDF yang diperbolehkan', 'error');
            input.value = '';
            return;
        }
        
        if (file.size > 5 * 1024 * 1024) {
            showToast('Ukuran file tidak boleh lebih dari 5MB', 'error');
            input.value = '';
            return;
        }
        
        fileName.textContent = file.name;
        fileInfo.classList.remove('hidden');
    } else {
        fileInfo.classList.add('hidden');
    }
}

// Form submission handler
document.addEventListener('DOMContentLoaded', function() {
    const uploadForm = document.getElementById('uploadForm');
    if (uploadForm) {
        uploadForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            
            try {
                const response = await fetch('/api/cpdb/berkas/upload', {
                    method: 'POST',
                    body: formData
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showToast(data.message);
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);
                } else {
                    showToast(data.message || 'Terjadi kesalahan saat upload berkas', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Terjadi kesalahan saat upload berkas', 'error');
            }
        });
    }
});

// Delete handler with toast confirmation
function deleteBerkas(berkasId) {
    // Create confirmation toast
    const toast = document.createElement('div');
    toast.className = 'bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-lg shadow-xl max-w-sm w-auto transform scale-95 opacity-0 transition-all duration-300';
    toast.innerHTML = `
        <div class="p-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center flex-grow">
                    <div class="flex-shrink-0 w-10 h-10 bg-yellow-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-exclamation-triangle text-white text-lg"></i>
                    </div>
                    <div class="ml-4 mr-4">
                        <p class="text-white font-medium">Konfirmasi Hapus</p>
                        <p class="text-white text-sm opacity-90">Apakah Anda yakin ingin menghapus data berkas ini?</p>
                    </div>
                </div>
                <button onclick="this.closest('.p-4').parentElement.remove()" class="text-white opacity-70 hover:opacity-100 transition-opacity duration-300">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="mt-4 flex justify-end space-x-2">
                <button class="px-4 py-2 bg-white text-yellow-600 rounded-lg hover:bg-yellow-50 transition-colors duration-300 font-medium text-sm" onclick="confirmDelete('${berkasId}', this)">Ya, Hapus</button>
                <button class="px-4 py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors duration-300 font-medium text-sm" onclick="cancelDelete(this)">Batal</button>
            </div>
        </div>
    `;
    
    const confirmContainer = document.getElementById('confirmContainer').querySelector('div');
    confirmContainer.appendChild(toast);
    
    // Add backdrop
    const backdrop = document.createElement('div');
    backdrop.className = 'fixed inset-0 bg-black bg-opacity-25 opacity-0 transition-opacity duration-300';
    document.getElementById('confirmContainer').insertBefore(backdrop, confirmContainer);
    
    // Trigger animation
    requestAnimationFrame(() => {
        toast.classList.remove('scale-95', 'opacity-0');
        backdrop.classList.remove('opacity-0');
    });
    
    // Remove confirmation after 10 seconds if no action taken
    setTimeout(() => {
        if (toast.parentNode === confirmContainer) {
            toast.classList.add('scale-95', 'opacity-0');
            backdrop.classList.add('opacity-0');
            setTimeout(() => {
                confirmContainer.removeChild(toast);
                backdrop.remove();
            }, 300);
        }
    }, 10000);
}

// Function to handle delete confirmation
function confirmDelete(berkasId, buttonElement) {
    const toast = buttonElement.closest('div').parentNode.parentNode;
    const confirmContainer = document.getElementById('confirmContainer');
    const backdrop = confirmContainer.querySelector('.bg-black');
    
    // Remove confirmation toast with animation
    toast.classList.add('scale-95', 'opacity-0');
    backdrop.classList.add('opacity-0');
    setTimeout(() => {
        confirmContainer.querySelector('div').removeChild(toast);
        backdrop.remove();
    }, 300);
    
    // Proceed with deletion
    fetch(`/api/cpdb/berkas/${berkasId}`, {
        method: 'DELETE'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showToast('Berkas berhasil dihapus');
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            showToast(data.message || 'Terjadi kesalahan saat menghapus berkas', 'error');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        showToast('Terjadi kesalahan saat menghapus berkas', 'error');
    });
}

// Function to cancel delete
function cancelDelete(buttonElement) {
    const toast = buttonElement.closest('div').parentNode.parentNode;
    const confirmContainer = document.getElementById('confirmContainer');
    const backdrop = confirmContainer.querySelector('.bg-black');
    
    // Remove confirmation toast with animation
    toast.classList.add('scale-95', 'opacity-0');
    backdrop.classList.add('opacity-0');
    setTimeout(() => {
        confirmContainer.querySelector('div').removeChild(toast);
        backdrop.remove();
    }, 300);
    
    showToast('Penghapusan berkas dibatalkan', 'warning');
}
</script>
