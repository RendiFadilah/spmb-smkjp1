        <button type="submit" id="submitBtn" class="px-6 py-3 text-sm font-semibold text-white bg-green-600 rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
          Simpan & Lanjutkan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
function showToast(message, type = 'success') {
    const container = document.getElementById('toast-container');
    const toast = document.createElement('div');
    
    const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
    const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
    
    toast.className = `${bgColor} text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 mb-4 transform translate-x-full transition-transform duration-300`;
    toast.innerHTML = `
        <i class="fas ${icon}"></i>
        <span>${message}</span>
    `;
    
    container.appendChild(toast);
    
    // Animate in
    setTimeout(() => {
        toast.classList.remove('translate-x-full');
    }, 100);
    
    // Remove after 5 seconds
    setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
            container.removeChild(toast);
        }, 300);
    }, 5000);
}

document.addEventListener('DOMContentLoaded', function() {
  // Load existing data if available
  fetch('/api/cpdb/formulir/data-pribadi')
    .then(response => response.json())
    .then(data => {
      if (data.success && data.data) {
        const form = document.getElementById('dataPribadiForm');
        Object.keys(data.data).forEach(key => {
          const input = form.elements[key];
          if (input) {
            if (key === 'tanggal_lahir') {
              input.value = new Date(data.data[key]).toISOString().split('T')[0];
            } else {
              input.value = data.data[key];
            }
          }
        });
        // Update button text if data exists
        document.getElementById('submitBtn').textContent = 'Update & Lanjutkan';
      }
    })
    .catch(error => {
      console.error('Error loading data:', error);
      showToast('Gagal memuat data', 'error');
    });

  // Handle form submission
  document.getElementById('dataPribadiForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    try {
      const response = await fetch('/api/cpdb/formulir/data-pribadi', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        showToast('Data berhasil disimpan');
        setTimeout(() => {
          window.location.href = '/dashboard/cpdb/pendaftaran/isi-formulir/data-ayah';
        }, 1000);
      } else {
        showToast(result.message || 'Terjadi kesalahan saat menyimpan data', 'error');
      }
    } catch (error) {
      console.error('Error:', error);
      showToast('Terjadi kesalahan saat menyimpan data', 'error');
    }
  });
});
</script>
