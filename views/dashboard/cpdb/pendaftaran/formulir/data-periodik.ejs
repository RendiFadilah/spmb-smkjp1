<!-- Toast Container -->
<div id="toast-container" class="fixed top-4 right-4 z-50"></div>

<div class="space-y-8">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <form id="dataPeriodicForm" class="space-y-8">
      <!-- Periodic Information -->
      <div class="relative">
        <div class="flex items-center mb-6">
          <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center text-white shadow-lg">
            <i class="fas fa-chart-bar text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-xl font-bold text-gray-800">Data Periodik</h3>
            <p class="text-sm text-gray-500">Informasi data periodik peserta didik</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Tinggi Badan (cm) <span class="text-gray-500 text-xs">(Opsional)</span></label>
            <div class="relative">
              <input type="number" 
                     name="tinggi_badan" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none"
                     placeholder="Masukkan tinggi badan">
              <div class="absolute inset-0 rounded-xl transition-transform duration-300 group-focus-within:shadow-lg pointer-events-none"></div>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Berat Badan (kg) <span class="text-gray-500 text-xs">(Opsional)</span></label>
            <div class="relative">
              <input type="number" 
                     name="berat_badan" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none"
                     placeholder="Masukkan berat badan">
              <div class="absolute inset-0 rounded-xl transition-transform duration-300 group-focus-within:shadow-lg pointer-events-none"></div>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Jarak Tempuh ke Sekolah (km) <span class="text-gray-500 text-xs">(Opsional)</span></label>
            <div class="relative">
              <input type="number" 
                     name="jarak_tempuh_ke_sekolah" 
                     step="0.01"
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none"
                     placeholder="Contoh: 2.5">
              <div class="absolute inset-0 rounded-xl transition-transform duration-300 group-focus-within:shadow-lg pointer-events-none"></div>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Waktu Tempuh ke Sekolah <span class="text-gray-500 text-xs">(Opsional)</span></label>
            <div class="relative">
              <input type="text" 
                     name="waktu_tempuh_ke_sekolah" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none"
                     placeholder="Contoh: 30 menit">
              <div class="absolute inset-0 rounded-xl transition-transform duration-300 group-focus-within:shadow-lg pointer-events-none"></div>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Jumlah Saudara Kandung <span class="text-gray-500 text-xs">(Opsional)</span></label>
            <div class="relative">
              <input type="number" 
                     name="jumlah_saudara_kandung" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none"
                     placeholder="Masukkan jumlah saudara kandung">
              <div class="absolute inset-0 rounded-xl transition-transform duration-300 group-focus-within:shadow-lg pointer-events-none"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-end space-x-4 pt-6">
        <button type="submit" id="submitBtn" class="px-6 py-3 text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          Simpan & Lanjutkan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
function showToast(message, type = 'success') {
    const container = document.getElementById('toast-container');
    const toast = document.createElement('div');
    
    const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
    const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
    
    toast.className = `${bgColor} text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 mb-4 transform translate-x-full transition-transform duration-300`;
    toast.innerHTML = `
        <i class="fas ${icon}"></i>
        <span>${message}</span>
    `;
    
    container.appendChild(toast);
    
    // Animate in
    setTimeout(() => {
        toast.classList.remove('translate-x-full');
    }, 100);
    
    // Remove after 5 seconds
    setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
            container.removeChild(toast);
        }, 300);
    }, 5000);
}

document.addEventListener('DOMContentLoaded', function() {
  // Load existing data if available
  fetch('/api/cpdb/formulir/data-periodik')
    .then(response => response.json())
    .then(data => {
      if (data.success && data.data) {
        const form = document.getElementById('dataPeriodicForm');
        Object.keys(data.data).forEach(key => {
          const input = form.elements[key];
          if (input) {
            input.value = data.data[key];
          }
        });
        // Update button text if data exists
        document.getElementById('submitBtn').textContent = 'Update & Lanjutkan';
      }
    })
    .catch(error => {
      console.error('Error loading data:', error);
      showToast('Gagal memuat data', 'error');
    });

  // Handle form submission
  document.getElementById('dataPeriodicForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = {};
    
    // Convert empty strings to null for optional fields
    formData.forEach((value, key) => {
      data[key] = value.trim() === '' ? null : value;
    });
    
    try {
      const response = await fetch('/api/cpdb/formulir/data-periodik', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        showToast('Data berhasil disimpan');
        setTimeout(() => {
          window.location.href = '/dashboard/cpdb/pendaftaran/isi-formulir/registrasi-peserta-didik';
        }, 1000);
      } else {
        showToast(result.message || 'Terjadi kesalahan saat menyimpan data', 'error');
      }
    } catch (error) {
      console.error('Error:', error);
      showToast('Terjadi kesalahan saat menyimpan data', 'error');
    }
  });
});
</script>
