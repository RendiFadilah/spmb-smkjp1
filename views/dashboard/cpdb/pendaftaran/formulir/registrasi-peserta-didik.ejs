<!-- Toast Container -->
<div id="toast-container" class="fixed top-4 right-4 z-50"></div>

<div class="space-y-8">
  <div class="bg-white rounded-2xl shadow-xl p-8">
    <form id="registrasiForm" class="space-y-8">
      <!-- Registrasi Information -->
      <div class="relative">
        <div class="flex items-center mb-6">
          <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center text-white shadow-lg">
            <i class="fas fa-user-graduate text-xl"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-xl font-bold text-gray-800">Registrasi Peserta Didik</h3>
            <p class="text-sm text-gray-500">Informasi registrasi peserta didik baru</p>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Jurusan</label>
            <div class="relative">
              <select name="jurusan" 
                      required 
                      class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none appearance-none">
                <option value="">Pilih Jurusan</option>
                <!-- Jurusan options will be populated by JavaScript -->
              </select>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Jenis Pendaftaran</label>
            <div class="relative">
              <select name="jenis_pendaftaran" 
                      required 
                      class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none appearance-none">
                <option value="">Pilih Jenis Pendaftaran</option>
                <option value="Siswa Baru">Siswa Baru</option>
                <option value="Pindahan">Pindahan</option>
                <option value="Kembali Bersekolah">Kembali Bersekolah</option>
              </select>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Tanggal Masuk Sekolah</label>
            <div class="relative">
              <input type="date" 
                     name="tanggal_masuk_sekolah" 
                     required 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none">
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Asal Sekolah</label>
            <div class="relative">
              <input type="text" 
                     name="asal_sekolah" 
                     required 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none" value="<%= user.asal_smp %>">
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Nomor Peserta Ujian</label>
            <div class="relative">
              <input type="text" 
                     name="nomor_peserta_ujian" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none">
              <p class="mt-1 text-sm text-gray-500">Opsional</p>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Nomor Seri Ijazah</label>
            <div class="relative">
              <input type="text" 
                     name="no_seri_ijazah" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none">
              <p class="mt-1 text-sm text-gray-500">Opsional</p>
            </div>
          </div>

          <div class="group">
            <label class="block text-sm font-medium text-gray-700 mb-2">Nomor Seri SKHUS</label>
            <div class="relative">
              <input type="text" 
                     name="no_seri_skhus" 
                     class="block w-full rounded-xl border border-gray-300 bg-white px-4 py-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all duration-300 outline-none">
              <p class="mt-1 text-sm text-gray-500">Opsional</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex justify-end space-x-4 pt-6">
        <button type="submit" id="submitBtn" class="px-6 py-3 text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
          Simpan & Lanjutkan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
function showToast(message, type = 'success') {
    const container = document.getElementById('toast-container');
    const toast = document.createElement('div');
    
    const bgColor = type === 'success' ? 'bg-green-500' : 'bg-red-500';
    const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
    
    toast.className = `${bgColor} text-white px-6 py-4 rounded-lg shadow-lg flex items-center space-x-3 mb-4 transform translate-x-full transition-transform duration-300`;
    toast.innerHTML = `
        <i class="fas ${icon}"></i>
        <span>${message}</span>
    `;
    
    container.appendChild(toast);
    
    // Animate in
    setTimeout(() => {
        toast.classList.remove('translate-x-full');
    }, 100);
    
    // Remove after 5 seconds
    setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
            container.removeChild(toast);
        }, 300);
    }, 5000);
}

document.addEventListener('DOMContentLoaded', function() {
  // Load jurusan data
  fetch('/api/cpdb/formulir/registrasi-peserta-didik/jurusan')
    .then(response => response.json())
    .then(data => {
      if (data.success && data.data) {
        const jurusanSelect = document.querySelector('select[name="jurusan"]');
        data.data.forEach(jurusan => {
          const option = document.createElement('option');
          option.value = jurusan.id_jurusan;
          option.textContent = `${jurusan.jurusan} (${jurusan.kode}) - Sisa Kapasitas: ${jurusan.sisa_kapasitas}`;
          option.disabled = jurusan.sisa_kapasitas <= 0;
          jurusanSelect.appendChild(option);
        });
      }
    })
    .catch(error => {
      console.error('Error loading jurusan:', error);
      showToast('Gagal memuat data jurusan', 'error');
    });

  // Load existing data if available
  fetch('/api/cpdb/formulir/registrasi-peserta-didik')
    .then(response => response.json())
    .then(data => {
      if (data.success && data.data) {
        const form = document.getElementById('registrasiForm');
        Object.keys(data.data).forEach(key => {
          const input = form.elements[key];
          if (input) {
            if (key === 'tanggal_masuk_sekolah') {
              input.value = new Date(data.data[key]).toISOString().split('T')[0];
            } else {
              input.value = data.data[key];
            }
          }
        });
        // Update button text if data exists
        document.getElementById('submitBtn').textContent = 'Update & Lanjutkan';
      }
    })
    .catch(error => {
      console.error('Error loading data:', error);
      showToast('Gagal memuat data', 'error');
    });

  // Handle form submission
  document.getElementById('registrasiForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    try {
      const response = await fetch('/api/cpdb/formulir/registrasi-peserta-didik', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        showToast('Data berhasil disimpan');
        setTimeout(() => {
          window.location.href = '/dashboard/cpdb/pendaftaran/upload-berkas';
        }, 1000);
      } else {
        showToast(result.message || 'Terjadi kesalahan saat menyimpan data', 'error');
      }
    } catch (error) {
      console.error('Error:', error);
      showToast('Terjadi kesalahan saat menyimpan data', 'error');
    }
  });
});
</script>
