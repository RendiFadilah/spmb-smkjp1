                        Petugas
                    </th>
                    <th scope="col" class="sticky right-0 z-10 bg-gray-50 px-6 py-4 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Aksi
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="seragamTableBody">
                <!-- Table rows will be dynamically populated -->
            </tbody>
        </table>
    </div>
</div>

<script>
let selectedId = null;
let allData = [];
let activeTab = 'today'; // Default active tab

// Initialize DataTable
$(document).ready(function() {
    loadSeragamData(activeTab);
    
    // Search functionality
    $('#searchInput').on('input', function() {
        filterData();
    });
});

function loadSeragamData(tab = 'today') {
    // Show loading state
    $('#seragamTableBody').html('<tr><td colspan="14" class="text-center py-4"><i class="fas fa-spinner fa-spin mr-2"></i>Memuat data...</td></tr>');
    
    const endpoint = tab === 'today' ? '/api/admin/seragam/today' : '/api/admin/seragam';
    $.get(endpoint, function(data) {
        allData = data;
        
        // Update jurusan filter options
        const uniqueJurusan = [...new Set(data.map(item => item.jurusan))].sort();
        const select = $('#jurusanFilter');
        select.empty().append('<option value="">Semua</option>');
        uniqueJurusan.forEach(jurusan => {
            if (jurusan) {
                select.append(`<option value="${jurusan}">${jurusan}</option>`);
            }
        });
        
        filterData();
    }).fail(function(xhr) {
        showToast('Gagal memuat data seragam', 'error');
        $('#seragamTableBody').html('<tr><td colspan="14" class="text-center py-4 text-red-500">Gagal memuat data</td></tr>');
    });
}

function switchTab(tab) {
    // Clear existing data
    allData = [];
    $('#seragamTableBody').empty();
    
    activeTab = tab;
    
    // Update tab styles
    if (tab === 'today') {
        $('#todayTab').addClass('bg-green-100 text-green-800').removeClass('text-gray-600 hover:bg-gray-100');
        $('#allTab').removeClass('bg-green-100 text-green-800').addClass('text-gray-600 hover:bg-gray-100');
    } else {
        $('#allTab').addClass('bg-green-100 text-green-800').removeClass('text-gray-600 hover:bg-gray-100');
        $('#todayTab').removeClass('bg-green-100 text-green-800').addClass('text-gray-600 hover:bg-gray-100');
    }
    
    // Load data for selected tab
    loadSeragamData(tab);
}

function filterData() {
    const searchValue = $('#searchInput').val().toLowerCase();
    const jurusanValue = $('#jurusanFilter').val();
    let filteredData = allData;
    
    if (searchValue) {
        filteredData = filteredData.filter(item => 
            item.nama_cpdb.toLowerCase().includes(searchValue)
        );
    }
    if (jurusanValue) {
        filteredData = filteredData.filter(item =>
            item.jurusan === jurusanValue
        );
    }
    
    renderTable(filteredData);
}

// Add event listener for jurusan filter
$('#jurusanFilter').on('change', function() {
    filterData();
});

function renderTable(data) {
    const tbody = $('#seragamTableBody');
    tbody.empty();
    
    const seragamSizes = [
        'Belum',
        'XS', 'S', 'M', 'L', 'XL', 'XXL', 'XXXL', '4XL', '5XL', '6XL', '7XL'
    ];
    
    data.forEach(function(item) {
        const row = `
            <tr class="hover:bg-gray-50 transition-all duration-200">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    ${item.nomor_formulir}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    ${new Date(item.tanggal_pemberian).toLocaleDateString('id-ID')}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    ${item.nama_cpdb}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    ${item.jurusan}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    ${item.jenis_kelamin}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm min-w-[140px]">
                    <select 
                        onchange="toggleSeragam(${item.id_seragam}, 'seragam_batik', this.value)"
                        class="bg-white border border-gray-300 text-gray-700 text-sm rounded-md focus:ring-2 focus:ring-green-500 focus:border-green-500 block w-full px-3 py-2 transition-all duration-200 cursor-pointer hover:border-green-400 appearance-none">
                        ${seragamSizes.map(size => `
                            <option value="${size === 'Belum' ? 'Belum' : 'Batik (' + size + ')'}" 
                                    ${item.seragam_batik === (size === 'Belum' ? 'Belum' : 'Batik (' + size + ')') ? 'selected' : ''}>
                                ${size}
                            </option>
                        `).join('')}
                    </select>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm min-w-[140px]">
                    <select 
                        onchange="toggleSeragam(${item.id_seragam}, 'seragam_olahraga', this.value)"
                        class="bg-white border border-gray-300 text-gray-700 text-sm rounded-md focus:ring-2 focus:ring-green-500 focus:border-green-500 block w-full px-3 py-2 transition-all duration-200 cursor-pointer hover:border-green-400 appearance-none">
                        ${seragamSizes.map(size => `
                            <option value="${size === 'Belum' ? 'Belum' : 'Olahraga (' + size + ')'}" 
                                    ${item.seragam_olahraga === (size === 'Belum' ? 'Belum' : 'Olahraga (' + size + ')') ? 'selected' : ''}>
                                ${size}
                            </option>
                        `).join('')}
                    </select>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center text-sm min-w-[140px]">
                    <select 
                        onchange="toggleSeragam(${item.id_seragam}, 'seragam_muslim', this.value)"
                        class="bg-white border border-gray-300 text-gray-700 text-sm rounded-md focus:ring-2 focus:ring-green-500 focus:border-green-500 block w-full px-3 py-2 transition-all duration-200 cursor-pointer hover:border-green-400 appearance-none">
                        ${seragamSizes.map(size => `
                            <option value="${size === 'Belum' ? 'Belum' : 'Muslim (' + size + ')'}" 
                                    ${item.seragam_muslim === (size === 'Belum' ? 'Belum' : 'Muslim (' + size + ')') ? 'selected' : ''}>
                                ${size}
                            </option>
                        `).join('')}
                    </select>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                    <button onclick="toggleStatus(${item.id_seragam}, 'topi', '${item.topi}')" 
                            class="transition-transform duration-200 transform hover:scale-110 focus:outline-none" 
                            title="Klik untuk mengubah status">
                        <i class="fas ${item.topi === 'Sudah' ? 'fa-check-circle text-green-500' : 'fa-times-circle text-red-500'} text-xl"></i>
                    </button>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                    <button onclick="toggleStatus(${item.id_seragam}, 'dasi', '${item.dasi}')" 
                            class="transition-transform duration-200 transform hover:scale-110 focus:outline-none" 
                            title="Klik untuk mengubah status">
                        <i class="fas ${item.dasi === 'Sudah' ? 'fa-check-circle text-green-500' : 'fa-times-circle text-red-500'} text-xl"></i>
                    </button>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                    <button onclick="toggleStatus(${item.id_seragam}, 'gesper', '${item.gesper}')" 
                            class="transition-transform duration-200 transform hover:scale-110 focus:outline-none" 
                            title="Klik untuk mengubah status">
                        <i class="fas ${item.gesper === 'Sudah' ? 'fa-check-circle text-green-500' : 'fa-times-circle text-red-500'} text-xl"></i>
                    </button>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                    <button onclick="toggleStatus(${item.id_seragam}, 'bet', '${item.bet}')" 
                            class="transition-transform duration-200 transform hover:scale-110 focus:outline-none" 
                            title="Klik untuk mengubah status">
                        <i class="fas ${item.bet === 'Sudah' ? 'fa-check-circle text-green-500' : 'fa-times-circle text-red-500'} text-xl"></i>
                    </button>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                    <button onclick="toggleStatus(${item.id_seragam}, 'lokasi', '${item.lokasi}')" 
                            class="transition-transform duration-200 transform hover:scale-110 focus:outline-none" 
                            title="Klik untuk mengubah status">
                        <i class="fas ${item.lokasi === 'Sudah' ? 'fa-check-circle text-green-500' : 'fa-times-circle text-red-500'} text-xl"></i>
                    </button>
                </td>
                <td class="sticky right-[50px] z-10 bg-white px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    ${item.nama_petugas}
                </td>
                <td class="sticky right-0 z-10 bg-white px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <button onclick="deleteSeragam(${item.id_seragam})" 
                            class="text-red-600 hover:text-red-800 bg-red-100 p-2 rounded-lg transition-all duration-200 hover:bg-red-200"
                            title="Hapus">
                        <i class="fas fa-trash-alt text-lg"></i>
                    </button>
                </td>
            </tr>`;
        tbody.append(row);
    });
}

function toggleSeragam(id, field, value) {
    $.ajax({
        url: `/api/admin/seragam/${id}/status`,
        type: 'PUT',
        data: { field, status: value },
        success: function() {
            loadSeragamData(activeTab);
            showToast('Ukuran seragam berhasil diperbarui');
        },
        error: function() {
            showToast('Gagal memperbarui ukuran seragam', 'error');
        }
    });
}

function toggleStatus(id, field, currentStatus) {
    const newStatus = currentStatus === 'Sudah' ? 'Belum' : 'Sudah';
    
    $.ajax({
        url: `/api/admin/seragam/${id}/status`,
        type: 'PUT',
        data: { field, status: newStatus },
        success: function() {
            loadSeragamData(activeTab);
            showToast('Status berhasil diperbarui');
        },
        error: function() {
            showToast('Gagal memperbarui status', 'error');
        }
    });
}

function openAddModal() {
    $('#modalTitle').text('Tambah Data Seragam');
    $('#seragamForm')[0].reset();
    $('#seragamId').val('');
    
    // Load available payments
    $.get('/api/admin/seragam/data/available-payments', function(data) {
        const select = $('#id_pembayaran');
        select.empty().append('<option value="">Pilih CPDB</option>');
        data.forEach(payment => {
            select.append(`<option value="${payment.id_pembayaran}">${payment.nomor_formulir} - ${payment.nama_cpdb} (${payment.jurusan})</option>`);
        });
    });
    
    openModal('seragamModal');
}

function editSeragam(id) {
    selectedId = id;
    $('#modalTitle').text('Edit Data Seragam');
    
    $.get(`/api/admin/seragam/${id}`, function(data) {
        $('#seragamId').val(data.id_seragam);
        $('#tanggal_pemberian').val(data.tanggal_pemberian);
        $('select[name="seragam_batik"]').val(data.seragam_batik);
        $('select[name="seragam_olahraga"]').val(data.seragam_olahraga);
        $('select[name="seragam_muslim"]').val(data.seragam_muslim);
        $('select[name="topi"]').val(data.topi);
        $('select[name="dasi"]').val(data.dasi);
        $('select[name="gesper"]').val(data.gesper);
        $('select[name="bet"]').val(data.bet);
        $('select[name="lokasi"]').val(data.lokasi);
        
        // Set payment
        const paymentSelect = $('#id_pembayaran');
        paymentSelect.empty().append(`<option value="${data.id_pembayaran}">${data.nomor_formulir} - ${data.nama_cpdb} (${data.jurusan})</option>`);
        paymentSelect.prop('disabled', true);
        
        openModal('seragamModal');
    });
}

function deleteSeragam(id) {
    selectedId = id;
    openModal('deleteModal');
}

function confirmDelete() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/seragam/${selectedId}`,
            type: 'DELETE',
            success: function() {
                closeModal('deleteModal');
                loadSeragamData(activeTab);
                showToast('Data seragam berhasil dihapus');
            },
            error: function() {
                showToast('Gagal menghapus data seragam', 'error');
            }
        });
    }
}

function handleSubmit(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());
    
    const url = data.id_seragam ? 
        `/api/admin/seragam/${data.id_seragam}` : 
        '/api/admin/seragam';
    const method = data.id_seragam ? 'PUT' : 'POST';
    
    $.ajax({
        url: url,
        type: method,
        data: data,
        success: function() {
            closeModal('seragamModal');
            loadSeragamData(activeTab);
            showToast(`Data seragam berhasil ${data.id_seragam ? 'diperbarui' : 'ditambahkan'}`);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan', 'error');
        }
    });
}

function openModal(modalId) {
    $(`#${modalId}`).removeClass('hidden');
}

function closeModal(modalId) {
    $(`#${modalId}`).addClass('hidden');
}

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}
</script>

