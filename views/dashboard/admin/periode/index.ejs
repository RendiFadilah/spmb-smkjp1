<!-- Page Title -->
<div class="mb-8 bg-white p-6 rounded-xl border border-green-100">
    <h1 class="text-3xl font-bold text-gray-800">Manajemen Periode Pendaftaran</h1>
    <p class="mt-2 text-gray-600">Kelola data periode pendaftaran</p>
</div>

<!-- Search and Add Button -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <!-- Search -->
    <div class="relative flex-1 group">
        <input type="text" 
               id="searchInput" 
               class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 group-hover:border-green-300"
               placeholder="Cari berdasarkan nama periode...">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none group-hover:text-green-500 transition-colors duration-200">
            <i class="fas fa-search text-gray-400"></i>
        </div>
        <!-- Clear search button -->
        <button id="clearSearch" 
                class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors duration-200 hidden">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <!-- Add Button -->
    <button type="button"
            onclick="openAddModal()"
            class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
        <i class="fas fa-plus mr-2"></i>
        Tambah Periode
    </button>
</div>

<!-- Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-200 hover:shadow-xl">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Nama Periode
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Jurusan
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Urutan
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Tanggal Mulai
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Tanggal Selesai
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Status
                    </th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Aksi
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="periodeTableBody">
                <!-- Table rows will be dynamically populated -->
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Modal -->
<div id="periodeModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900" id="modalTitle">
                    Tambah Periode
                </h3>
                <button type="button" onclick="closeModal('periodeModal')" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center transition-colors duration-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <!-- Modal body -->
            <form id="periodeForm" onsubmit="handleSubmit(event)" class="p-6">
                <input type="hidden" id="periodeId" name="id_periode">
                <div class="grid gap-6 mb-6">
                    <div>
                        <label for="nama_periode" class="block mb-2 text-sm font-medium text-gray-900">Nama Periode</label>
                        <input type="text" 
                               id="nama_periode" 
                               name="nama_periode" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" 
                               placeholder="Periode 1"
                               required>
                    </div>
                    <div>
                        <label for="urutan_periode" class="block mb-2 text-sm font-medium text-gray-900">Urutan</label>
                        <input type="number" 
                               id="urutan_periode" 
                               name="urutan_periode" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" 
                               placeholder="1"
                               required>
                    </div>
                    <div>
                        <label for="tanggal_mulai" class="block mb-2 text-sm font-medium text-gray-900">Tanggal Mulai</label>
                        <input type="date" 
                               id="tanggal_mulai" 
                               name="tanggal_mulai" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" 
                               required>
                    </div>
                    <div>
                        <label for="tanggal_selesai" class="block mb-2 text-sm font-medium text-gray-900">Tanggal Selesai</label>
                        <input type="date" 
                               id="tanggal_selesai" 
                               name="tanggal_selesai" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" 
                               required>
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Master Biaya</label>
                        <div class="relative">
                            <button type="button" 
                                    id="dropdownButton"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 text-left transition-all duration-200">
                                Pilih Master Biaya
                                <span class="float-right">
                                    <i class="fas fa-chevron-down"></i>
                                </span>
                            </button>
                            
                            <div id="dropdownContent" 
                                 class="hidden absolute z-10 w-full mt-1 bg-white border border-gray-200 rounded-lg shadow-lg">
                                <div class="p-3 border-b bg-gray-50 flex justify-between items-center">
                                    <label class="inline-flex items-center">
                                        <input type="checkbox" 
                                               id="selectAll" 
                                               class="form-checkbox h-5 w-5 text-green-600 rounded border-gray-300 focus:ring-green-500">
                                        <span class="ml-2 text-sm font-medium text-gray-700">Pilih Semua</span>
                                    </label>
                                    <span id="selectedCount" class="text-sm text-gray-600 font-medium">0 item dipilih</span>
                                </div>
                                <div class="max-h-[400px] overflow-y-auto p-3 space-y-2" id="biayaOptions">
                                    <!-- Options will be populated here -->
                                </div>
                            </div>
                            
                            <!-- Hidden input to store selected values -->
                            <input type="hidden" id="id_biaya_array" name="id_biaya_array" required>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-end p-6 space-x-3 border-t border-gray-200 rounded-b">
                    <button type="button" onclick="closeModal('periodeModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                        Batal
                    </button>
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-200">
                        Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <div class="p-6 text-center">
                <i class="fas fa-exclamation-circle text-6xl text-red-500 mb-6"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">
                    Apakah Anda yakin ingin menghapus periode ini?
                </h3>
                <button type="button" onclick="confirmDelete()" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2 transition-all duration-200">
                    Ya, hapus
                </button>
                <button type="button" onclick="closeModal('deleteModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                    Batal
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let selectedId = null;
let allData = [];

// Initialize DataTable
$(document).ready(function() {
    loadPeriodeData();
    
    // Enhanced search functionality
    const searchInput = $('#searchInput');
    const clearButton = $('#clearSearch');
    
    searchInput.on('input', function() {
        const hasValue = $(this).val().length > 0;
        clearButton.toggleClass('hidden', !hasValue);
        filterData();
    });
    
    clearButton.on('click', function() {
        searchInput.val('');
        $(this).addClass('hidden');
        filterData();
        searchInput.focus();
    });
    
    // Add loading animation
    searchInput.on('focus', function() {
        $(this).parent().addClass('ring-2 ring-green-200');
    }).on('blur', function() {
        $(this).parent().removeClass('ring-2 ring-green-200');
    });
});

function loadPeriodeData() {
    $.get('/api/admin/periode', function(response) {
        if (response.success) {
            allData = response.data;
            filterData();
        }
    }).fail(function(xhr) {
        showToast('Gagal memuat data periode', 'error');
    });
}

function filterData() {
    const searchValue = $('#searchInput').val().toLowerCase();
    let filteredData = allData;
    
    if (searchValue) {
        filteredData = filteredData.filter(periode => 
            periode.nama_periode.toLowerCase().includes(searchValue)
        );
    }
    
    renderTable(filteredData);
}

function renderTable(data) {
    const tbody = $('#periodeTableBody');
    tbody.fadeOut(150, function() {
        tbody.empty();
        
        data.forEach(function(periode) {
            // Get unique jurusan codes from master_biaya
            const jurusanList = periode.master_biaya
                ? [...new Set(periode.master_biaya.map(mb => mb.kode_jurusan))].join(', ')
                : '-';

            const row = `
                <tr class="hover:bg-gray-50 transition-all duration-200 transform hover:scale-[1.01]">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${periode.nama_periode}</td>
                    <td class="px-6 py-4 text-sm text-gray-500">${jurusanList}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${periode.urutan_periode}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(periode.tanggal_mulai).toLocaleDateString('id-ID')}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(periode.tanggal_selesai).toLocaleDateString('id-ID')}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${periode.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}">
                            ${periode.status === 'active' ? 'Aktif' : 'Tidak Aktif'}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button onclick="toggleStatus(${periode.id_periode}, '${periode.status === 'active' ? 'inactive' : 'active'}')" 
                                class="text-blue-600 hover:text-blue-800 mr-3 transition-colors duration-200">
                            <i class="fas fa-${periode.status === 'active' ? 'toggle-off' : 'toggle-on'}"></i>
                        </button>
                        <button onclick="editPeriode(${periode.id_periode})" 
                                class="text-green-600 hover:text-green-800 mr-3 transition-colors duration-200">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button onclick="deletePeriode(${periode.id_periode})" 
                                class="text-red-600 hover:text-red-800 transition-colors duration-200">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>`;
            tbody.append(row);
        });
        tbody.fadeIn(150);
    });
}

// Declare selectedItems in global scope
let selectedItems = new Set();

// Handle dropdown toggle
$(document).ready(function() {
    const dropdownButton = $('#dropdownButton');
    const dropdownContent = $('#dropdownContent');
    const selectAll = $('#selectAll');

    // Toggle dropdown
    dropdownButton.on('click', function(e) {
        e.stopPropagation();
        dropdownContent.toggleClass('hidden');
    });

    // Close dropdown when clicking outside
    $(document).on('click', function(e) {
        if (!$(e.target).closest('.relative').length) {
            dropdownContent.addClass('hidden');
        }
    });

    // Handle select all
    selectAll.on('change', function() {
        const isChecked = $(this).prop('checked');
        $('#biayaOptions input[type="checkbox"]').prop('checked', isChecked);
        
        if (isChecked) {
            $('#biayaOptions input[type="checkbox"]').each(function() {
                selectedItems.add($(this).val());
            });
        } else {
            selectedItems.clear();
        }
        
        updateSelectedCount();
        updateHiddenInput();
        updateDropdownButtonText();
    });
});

function updateSelectedCount() {
    const count = selectedItems.size;
    $('#selectedCount').text(`${count} item dipilih`);
    updateDropdownButtonText();
}

function updateDropdownButtonText() {
    const button = $('#dropdownButton');
    const count = selectedItems.size;
    
    if (count === 0) {
        button.html(`
            <span>Pilih Master Biaya</span>
            <span class="float-right">
                <i class="fas fa-chevron-down"></i>
            </span>
        `);
    } else {
        button.html(`
            <span>${count} Master Biaya dipilih</span>
            <span class="float-right">
                <i class="fas fa-chevron-down"></i>
            </span>
        `);
    }
}

function openAddModal() {
    $('#modalTitle').text('Tambah Periode');
    $('#periodeForm')[0].reset();
    $('#periodeId').val('');
    
    // Load master biaya
    $.get('/api/admin/biaya', function(response) {
        if (response.success) {
            const biayaOptions = $('#biayaOptions');
            biayaOptions.empty();
            
            response.data.forEach(biaya => {
                const option = `
                    <label class="flex items-center p-2 hover:bg-gray-50 rounded cursor-pointer">
                        <input type="checkbox" 
                               value="${biaya.id_biaya}" 
                               class="form-checkbox h-4 w-4 text-green-600 rounded border-gray-300 focus:ring-green-500">
                        <span class="ml-2 text-sm text-gray-700">
                            ${biaya.nama_jurusan} - ${biaya.tahun_ajaran} 
                            <span class="text-gray-500">(${formatRupiah(biaya.total_biaya)})</span>
                        </span>
                    </label>
                `;
                biayaOptions.append(option);
            });

            // Handle individual checkbox changes
            $('#biayaOptions input[type="checkbox"]').on('change', function() {
                const value = $(this).val();
                if ($(this).prop('checked')) {
                    selectedItems.add(value);
                } else {
                    selectedItems.delete(value);
                    $('#selectAll').prop('checked', false);
                }
                updateSelectedCount();
                updateHiddenInput();
            });
        }
    });
    
    openModal('periodeModal');
}

function updateHiddenInput() {
    const selectedArray = Array.from(selectedItems);
    if (selectedArray.length > 0) {
        $('#id_biaya_array').val(selectedArray.join(','));
    } else {
        $('#id_biaya_array').val('');
    }
}

function formatRupiah(amount) {
    return new Intl.NumberFormat('id-ID', {
        style: 'currency',
        currency: 'IDR',
        minimumFractionDigits: 0,
        maximumFractionDigits: 0
    }).format(amount);
}

// Attach checkbox change handler
function attachCheckboxHandler() {
    $('#biayaOptions input[type="checkbox"]').on('change', function() {
        const value = $(this).val();
        if ($(this).prop('checked')) {
            selectedItems.add(value);
        } else {
            selectedItems.delete(value);
            $('#selectAll').prop('checked', false);
        }
        updateSelectedCount();
        updateHiddenInput();
    });
}

function editPeriode(id) {
    selectedId = id;
    $('#modalTitle').text('Edit Periode');
    selectedItems.clear(); // Clear previous selections
    
    // Load master biaya first
    $.get('/api/admin/biaya', function(response) {
        if (response.success) {
            const biayaOptions = $('#biayaOptions');
            biayaOptions.empty();
            
            response.data.forEach(biaya => {
                const option = `
                    <label class="flex items-center p-2 hover:bg-gray-50 rounded cursor-pointer">
                        <input type="checkbox" 
                               value="${biaya.id_biaya}" 
                               class="form-checkbox h-4 w-4 text-green-600 rounded border-gray-300 focus:ring-green-500">
                        <span class="ml-2 text-sm text-gray-700">
                            ${biaya.nama_jurusan} - ${biaya.tahun_ajaran} 
                            <span class="text-gray-500">(${formatRupiah(biaya.total_biaya)})</span>
                        </span>
                    </label>
                `;
                biayaOptions.append(option);
            });
            
            // Then load periode data
            $.get(`/api/admin/periode/${id}`, function(response) {
                if (response.success) {
                    const data = response.data;
                    $('#periodeId').val(data.id_periode);
                    $('#nama_periode').val(data.nama_periode);
                    $('#urutan_periode').val(data.urutan_periode);
                    $('#tanggal_mulai').val(data.tanggal_mulai.split('T')[0]);
                    $('#tanggal_selesai').val(data.tanggal_selesai.split('T')[0]);
                    
                    // Check the appropriate checkboxes based on master_biaya
                    data.master_biaya.forEach(biaya => {
                        const checkbox = $(`#biayaOptions input[value="${biaya.id_biaya}"]`);
                        checkbox.prop('checked', true);
                        selectedItems.add(biaya.id_biaya.toString());
                    });
                    
                    updateSelectedCount();
                    updateHiddenInput();
                    
                    // Update select all checkbox
                    const totalOptions = $('#biayaOptions input[type="checkbox"]').length;
                    $('#selectAll').prop('checked', selectedItems.size === totalOptions);
                    
                    openModal('periodeModal');
                }
            });
            
            // Reattach checkbox change handlers
            $('#biayaOptions input[type="checkbox"]').on('change', function() {
                const value = $(this).val();
                if ($(this).prop('checked')) {
                    selectedItems.add(value);
                } else {
                    selectedItems.delete(value);
                    $('#selectAll').prop('checked', false);
                }
                updateSelectedCount();
                updateHiddenInput();
            });
        }
    });
}

function toggleStatus(id, newStatus) {
    $.ajax({
        url: `/api/admin/periode/${id}/status`,
        type: 'POST',
        data: { status: newStatus },
        success: function(response) {
            if (response.success) {
                loadPeriodeData();
                showToast(`Status periode berhasil ${newStatus === 'active' ? 'diaktifkan' : 'dinonaktifkan'}`);
            }
        },
        error: function() {
            showToast('Gagal mengubah status periode', 'error');
        }
    });
}

function deletePeriode(id) {
    selectedId = id;
    openModal('deleteModal');
}

function confirmDelete() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/periode/${selectedId}`,
            type: 'DELETE',
            success: function(response) {
                if (response.success) {
                    closeModal('deleteModal');
                    loadPeriodeData();
                    showToast('Periode berhasil dihapus');
                }
            },
            error: function() {
                showToast('Gagal menghapus periode', 'error');
            }
        });
    }
}

function handleSubmit(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());
    
    const url = data.id_periode ? 
        `/api/admin/periode/${data.id_periode}` : 
        '/api/admin/periode';
    
    $.ajax({
        url: url,
        type: 'POST',
        data: data,
        success: function(response) {
            if (response.success) {
                closeModal('periodeModal');
                loadPeriodeData();
                showToast(`Periode berhasil ${data.id_periode ? 'diperbarui' : 'ditambahkan'}`);
            }
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan', 'error');
        }
    });
}

function openModal(modalId) {
    $(`#${modalId}`).removeClass('hidden').addClass('animate-fade-in');
}

function closeModal(modalId) {
    $(`#${modalId}`).addClass('hidden').removeClass('animate-fade-in');
}

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}
</script>

