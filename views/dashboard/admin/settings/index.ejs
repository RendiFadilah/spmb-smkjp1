<!-- Page Title -->
<div class="mb-8 bg-white p-6 rounded-xl border border-green-100">
    <h1 class="text-3xl font-bold text-gray-800">Pengaturan</h1>
    <p class="mt-2 text-gray-600">Kelola profil dan keamanan akun</p>
</div>

<!-- Settings Sections -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Profile Section -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-800">Profil</h2>
            <p class="mt-1 text-sm text-gray-500">Perbarui informasi profil Anda</p>
        </div>
        <form id="profileForm" class="p-6 space-y-4">
            <div>
                <label for="nama_lengkap" class="block text-sm font-medium text-gray-700">Nama Lengkap</label>
                <input type="text" 
                       id="nama_lengkap" 
                       name="nama_lengkap" 
                       class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition duration-150 ease-in-out" 
                       required>
            </div>
            <div>
                <label for="nik" class="block text-sm font-medium text-gray-700">NIK</label>
                <input type="text" 
                       id="nik" 
                       name="nik" 
                       class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition duration-150 ease-in-out" 
                       required>
            </div>
            <div>
                <label for="nomor_whatsapp" class="block text-sm font-medium text-gray-700">Nomor WhatsApp</label>
                <input type="tel" 
                       id="nomor_whatsapp" 
                       name="nomor_whatsapp" 
                       class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition duration-150 ease-in-out" 
                       required>
            </div>
            <div class="pt-4">
                <button type="submit" 
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out">
                    Simpan Perubahan
                </button>
            </div>
        </form>
    </div>

    <!-- Password Section -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="p-6 border-b border-gray-100">
            <h2 class="text-xl font-semibold text-gray-800">Ubah Password</h2>
            <p class="mt-1 text-sm text-gray-500">Perbarui password akun Anda</p>
        </div>
        <form id="passwordForm" class="p-6 space-y-4">
            <div>
                <label for="oldPassword" class="block text-sm font-medium text-gray-700">Password Lama</label>
                <input type="password" 
                       id="oldPassword" 
                       name="oldPassword" 
                       class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition duration-150 ease-in-out" 
                       required>
            </div>
            <div>
                <label for="newPassword" class="block text-sm font-medium text-gray-700">Password Baru</label>
                <input type="password" 
                       id="newPassword" 
                       name="newPassword" 
                       class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition duration-150 ease-in-out" 
                       required>
            </div>
            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Konfirmasi Password Baru</label>
                <input type="password" 
                       id="confirmPassword" 
                       name="confirmPassword" 
                       class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 sm:text-sm transition duration-150 ease-in-out" 
                       required>
            </div>
            <div class="pt-4">
                <button type="submit" 
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out">
                    Ubah Password
                </button>
            </div>
        </form>
    </div>
</div>

<script>
$(document).ready(function() {
    // Load profile data
    $.get('/api/admin/settings/profile')
        .done(function(data) {
            if (data) {
                $('#nama_lengkap').val(data.nama_lengkap || '');
                $('#nik').val(data.nik || '');
                $('#nomor_whatsapp').val(data.nomor_whatsapp || '');
            }
        })
        .fail(function(xhr) {
            showToast('Gagal memuat data profil', 'error');
            console.error('Error:', xhr);
        });

    // Handle profile form submission
    $('#profileForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = {
            nama_lengkap: $('#nama_lengkap').val().trim(),
            nik: $('#nik').val().trim(),
            nomor_whatsapp: $('#nomor_whatsapp').val().trim()
        };

        // Validate required fields
        if (!formData.nama_lengkap || !formData.nik || !formData.nomor_whatsapp) {
            showToast('Semua field harus diisi', 'error');
            return;
        }

        $.ajax({
            url: '/api/admin/settings/profile',
            type: 'PUT',
            data: formData,
            success: function(response) {
                showToast('Profil berhasil diperbarui');
            },
            error: function(xhr) {
                showToast(xhr.responseJSON?.message || 'Gagal memperbarui profil', 'error');
            }
        });
    });

    // Handle password form submission
    $('#passwordForm').on('submit', function(e) {
        e.preventDefault();
        
        const oldPassword = $('#oldPassword').val();
        const newPassword = $('#newPassword').val();
        const confirmPassword = $('#confirmPassword').val();

        if (newPassword !== confirmPassword) {
            showToast('Password baru dan konfirmasi password tidak cocok', 'error');
            return;
        }

        $.ajax({
            url: '/api/admin/settings/password',
            type: 'PUT',
            data: {
                oldPassword: oldPassword,
                newPassword: newPassword
            },
            success: function(response) {
                showToast('Password berhasil diperbarui');
                $('#passwordForm')[0].reset();
            },
            error: function(xhr) {
                showToast(xhr.responseJSON?.message || 'Gagal memperbarui password', 'error');
            }
        });
    });
});

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}
</script>
