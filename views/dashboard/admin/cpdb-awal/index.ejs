    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <div class="p-6 text-center">
                <i class="fas fa-exclamation-circle text-6xl text-red-500 mb-6"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">
                    Apakah Anda yakin ingin menghapus CPDB ini?
                </h3>
                <button type="button" onclick="confirmDelete()" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2 transition-all duration-200">
                    Ya, hapus
                </button>
                <button type="button" onclick="closeModal('deleteModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                    Batal
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let selectedId = null;
let allData = [];
let currentTab = 'today';

// Initialize DataTable
$(document).ready(function() {
    loadCPDBData();
    switchTab('today'); // Ensure today tab is active on page load
    
    // Enhanced search functionality
    const searchInput = $('#searchInput');
    const clearButton = $('#clearSearch');
    
    searchInput.on('input', function() {
        const hasValue = $(this).val().length > 0;
        clearButton.toggleClass('hidden', !hasValue);
        filterData();
    });
    
    clearButton.on('click', function() {
        searchInput.val('');
        $(this).addClass('hidden');
        filterData();
        searchInput.focus();
    });
    
    // Add loading animation
    searchInput.on('focus', function() {
        $(this).parent().addClass('ring-2 ring-green-200');
    }).on('blur', function() {
        $(this).parent().removeClass('ring-2 ring-green-200');
    });
});

function loadCPDBData() {
    $.get('/api/admin/cpdb-awal', function(data) {
        allData = data;
        updateStats(data);
        filterData();
    }).fail(function() {
        showToast('Gagal memuat data CPDB', 'error');
    });
}

function switchTab(tab) {
    currentTab = tab;
    $('.tab-button').removeClass('border-green-500 text-green-600').addClass('border-transparent text-gray-500');
    $(`#tab-${tab}`).removeClass('border-transparent text-gray-500').addClass('border-green-500 text-green-600');
    
    // Update stats and filter table when switching tabs
    updateStats(allData);
    filterData();
}

function updateStats(data) {
    let filteredData = data;
    
    // Filter data if on today's tab
    if (currentTab === 'today') {
        const today = new Date().toISOString().split('T')[0];
        filteredData = data.filter(cpdb => 
            cpdb.tanggal_daftar.split('T')[0] === today
        );
    }
    
    // Update stats based on filtered data
    $('#totalCPDB').text(filteredData.length);
    const sudahWawancara = filteredData.filter(cpdb => cpdb.status_wawancara === 'Sudah').length;
    $('#totalWawancara').text(sudahWawancara);
}

function filterData() {
    const searchValue = $('#searchInput').val().toLowerCase();
    let filteredData = allData;
    
    // Filter by tab
    if (currentTab === 'today') {
        const today = new Date().toISOString().split('T')[0];
        filteredData = filteredData.filter(cpdb => 
            cpdb.tanggal_daftar.split('T')[0] === today
        );
    }
    
    // Filter by search
    if (searchValue) {
        filteredData = filteredData.filter(cpdb => 
            cpdb.nama_lengkap.toLowerCase().includes(searchValue) ||
            cpdb.nisn.toLowerCase().includes(searchValue) ||
            cpdb.nik.toLowerCase().includes(searchValue) ||
            cpdb.asal_smp.toLowerCase().includes(searchValue) ||
            cpdb.nomor_whatsapp.toLowerCase().includes(searchValue)
        );
    }
    
    $('#noResults').toggleClass('hidden', filteredData.length > 0);
    renderTable(filteredData);
}

let verifyButton = null;

function verifyWawancara(id, button) {
    selectedId = id;
    verifyButton = button;
    openModal('verifyModal');
}

function confirmVerification() {
    // Disable button and show loading state
    const $button = $(verifyButton);
    const originalContent = $button.html();
    $button.prop('disabled', true)
          .html('<i class="fas fa-spinner fa-spin mr-2"></i> Memverifikasi...')
          .addClass('opacity-75');

    $.ajax({
        url: `/api/admin/cpdb-awal/${selectedId}/status`,
        type: 'PUT',
        data: { status_wawancara: 'Sudah' },
        success: function(response) {
            closeModal('verifyModal');
            if (response.status === 'Sudah') {
                // Update the UI immediately
                const $row = $button.closest('tr');
                const $statusCell = $row.find('td:nth-child(5)');
                $statusCell.html(`
                    <div class="flex items-center">
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                            Sudah
                        </span>
                    </div>
                `);
                
                // Update stats
                loadCPDBData();
                showToast('Status wawancara berhasil diperbarui');
            } else {
                // Handle unexpected response
                $button.prop('disabled', false)
                       .html(originalContent)
                       .removeClass('opacity-75');
                showToast('Gagal memperbarui status wawancara', 'error');
            }
        },
        error: function(xhr) {
            closeModal('verifyModal');
            // Restore button state on error
            $button.prop('disabled', false)
                   .html(originalContent)
                   .removeClass('opacity-75');
            showToast(xhr.responseJSON?.message || 'Gagal memperbarui status wawancara', 'error');
        }
    });
}

function renderTable(data) {
    const tbody = $('#cpdbTableBody');
    tbody.fadeOut(150, function() {
        tbody.empty();
        
        data.forEach(function(cpdb) {
            const statusClass = cpdb.status_wawancara === 'Sudah' 
                ? 'bg-green-100 text-green-800' 
                : 'bg-yellow-100 text-yellow-800';
            
            const row = `
                <tr class="hover:bg-gray-50 transition-all duration-200 transform hover:scale-[1.01]">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${cpdb.nama_lengkap}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${cpdb.nisn}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${cpdb.nik}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${cpdb.asal_smp}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="https://wa.me/${cpdb.nomor_whatsapp.replace(/^0/, '62')}" 
                           target="_blank"
                           class="inline-flex items-center px-3 py-1 rounded-lg bg-green-50 hover:bg-green-100 transition-colors duration-200">
                            <i class="fab fa-whatsapp text-green-600 mr-2"></i>
                            <span class="text-sm text-green-700">${cpdb.nomor_whatsapp}</span>
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <div class="flex items-center">
                            <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full ${statusClass}">
                                ${cpdb.status_wawancara}
                            </span>
                            ${cpdb.status_wawancara === 'Belum' ? 
                              `<button onclick="verifyWawancara(${cpdb.id_user}, this)" 
                                class="ml-2 text-green-600 hover:text-green-800 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 rounded-lg px-2 py-1">
                                <i class="fas fa-check-circle"></i> Verifikasi
                               </button>` : ''}
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        ${new Date(cpdb.tanggal_daftar).toLocaleDateString('id-ID')}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button onclick="editCPDB(${cpdb.id_user})" class="text-green-600 hover:text-green-800 mr-3 transition-colors duration-200">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button onclick="deleteCPDB(${cpdb.id_user})" class="text-green-600 hover:text-green-800 transition-colors duration-200">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>`;
            tbody.append(row);
        });
        tbody.fadeIn(150);
    });
}

function openAddModal() {
    $('#modalTitle').text('Tambah CPDB');
    $('#cpdbForm')[0].reset();
    $('#userId').val('');
    $('#status_wawancara').val('Belum');
    openModal('cpdbModal');
}

function editCPDB(id) {
    selectedId = id;
    $('#modalTitle').text('Edit CPDB');
    
    $.get(`/api/admin/cpdb-awal/${id}`, function(data) {
        $('#userId').val(data.id_user);
        $('#nama_lengkap').val(data.nama_lengkap);
        $('#nisn').val(data.nisn);
        $('#nik').val(data.nik);
        $('#asal_smp').val(data.asal_smp);
        $('#nomor_whatsapp').val(data.nomor_whatsapp);
        $('#jenis_kelamin').val(data.jenis_kelamin);
        $('#status_wawancara').val(data.status_wawancara);
        $('#password').val(''); // Clear password field for security
        $('#password').prop('required', false); // Make password optional on edit
        openModal('cpdbModal');
    });
}

function deleteCPDB(id) {
    selectedId = id;
    openModal('deleteModal');
}

function confirmDelete() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/cpdb-awal/${selectedId}`,
            type: 'DELETE',
            success: function() {
                closeModal('deleteModal');
                loadCPDBData();
                showToast('CPDB berhasil dihapus');
            },
            error: function() {
                showToast('Gagal menghapus CPDB', 'error');
            }
        });
    }
}

function handleSubmit(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());
    
    const url = data.id_user ? `/api/admin/cpdb-awal/${data.id_user}` : '/api/admin/cpdb-awal';
    const method = data.id_user ? 'PUT' : 'POST';
    
    $.ajax({
        url: url,
        type: method,
        data: data,
        success: function() {
            closeModal('cpdbModal');
            loadCPDBData();
            showToast(`CPDB berhasil ${data.id_user ? 'diperbarui' : 'ditambahkan'}`);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan', 'error');
        }
    });
}

function openModal(modalId) {
    $(`#${modalId}`).removeClass('hidden').addClass('animate-fade-in');
}

function closeModal(modalId) {
    $(`#${modalId}`).addClass('hidden').removeClass('animate-fade-in');
}

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}
</script>

