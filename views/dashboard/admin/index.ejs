<style>
    .stat-card { transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1); }
    .stat-card:hover { transform: translateY(-2px); }
    .fade-in { animation: fadeIn 0.5s ease-out both; }
    .fade-in-1 { animation-delay: 0.05s; }
    .fade-in-2 { animation-delay: 0.1s; }
    .fade-in-3 { animation-delay: 0.15s; }
    .fade-in-4 { animation-delay: 0.2s; }
    .fade-in-5 { animation-delay: 0.25s; }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(12px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .progress-bar-animated { transition: width 1.2s cubic-bezier(0.16, 1, 0.3, 1); }
</style>

<!-- Page Header -->
<div class="mb-8 fade-in">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
            <p class="text-sm text-gray-500 mt-1">Selamat datang kembali, <span class="font-medium text-gray-700"><%= (user.nama_lengkap || user.nama).split(' ').slice(0,2).join(' ') %></span> ðŸ‘‹</p>
        </div>
        <div class="flex items-center gap-2">
            <span class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-xl border border-gray-200 text-sm text-gray-600 shadow-sm">
                <i class="fas fa-calendar-day text-brand-500 text-xs"></i>
                <span id="currentDate"></span>
            </span>
        </div>
    </div>
</div>

<!-- Top Stats Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 mb-8">
    <!-- CPDB Awal -->
    <div class="stat-card fade-in fade-in-1 bg-white rounded-2xl border border-gray-100 p-6 shadow-sm hover:shadow-md">
        <div class="flex items-start justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">CPDB Awal</p>
                <h3 class="text-3xl font-bold text-gray-900 mt-2"><%= stats.cpdbAwal %></h3>
                <p class="text-xs text-gray-400 mt-2 flex items-center gap-1">
                    <i class="fas fa-user-plus text-blue-400"></i> Total pendaftar awal
                </p>
            </div>
            <div class="w-12 h-12 rounded-2xl bg-blue-50 flex items-center justify-center shrink-0">
                <i class="fas fa-user-plus text-blue-500 text-lg"></i>
            </div>
        </div>
    </div>

    <!-- CPDB Tetap -->
    <div class="stat-card fade-in fade-in-2 bg-white rounded-2xl border border-gray-100 p-6 shadow-sm hover:shadow-md">
        <div class="flex items-start justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">CPDB Tetap</p>
                <h3 class="text-3xl font-bold text-gray-900 mt-2"><%= stats.cpdbTetap %></h3>
                <p class="text-xs text-gray-400 mt-2 flex items-center gap-1">
                    <i class="fas fa-user-check text-emerald-400"></i> Sudah terverifikasi
                </p>
            </div>
            <div class="w-12 h-12 rounded-2xl bg-emerald-50 flex items-center justify-center shrink-0">
                <i class="fas fa-user-check text-emerald-500 text-lg"></i>
            </div>
        </div>
    </div>

    <!-- Formulir -->
    <div class="stat-card fade-in fade-in-3 bg-white rounded-2xl border border-gray-100 p-6 shadow-sm hover:shadow-md">
        <div class="flex items-start justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">Formulir</p>
                <h3 class="text-3xl font-bold text-gray-900 mt-2"><%= stats.formulir %></h3>
                <p class="text-xs text-gray-400 mt-2 flex items-center gap-1">
                    <i class="fas fa-file-lines text-violet-400"></i> Formulir reguler
                </p>
            </div>
            <div class="w-12 h-12 rounded-2xl bg-violet-50 flex items-center justify-center shrink-0">
                <i class="fas fa-file-lines text-violet-500 text-lg"></i>
            </div>
        </div>
    </div>
</div>

<% if (user.roles === 'Admin' || user.roles === 'Bendahara') { %>
<!-- Payment Stats -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-5 mb-8">
    <!-- Today's Payment -->
    <div class="stat-card fade-in fade-in-4 bg-gradient-to-br from-brand-600 to-brand-700 rounded-2xl p-6 shadow-lg shadow-brand-500/10 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-8 translate-x-8"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-6 -translate-x-6"></div>
        <div class="relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="w-11 h-11 rounded-xl bg-white/15 flex items-center justify-center">
                    <i class="fas fa-wallet text-white text-lg"></i>
                </div>
                <span class="text-xs font-semibold text-brand-200 bg-white/10 px-3 py-1 rounded-full">Hari Ini</span>
            </div>
            <h3 class="text-2xl font-bold text-white"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(stats.pembayaranHariIni) %></h3>
            <p class="text-brand-200 text-sm mt-1">Pembayaran Hari Ini</p>
        </div>
    </div>

    <!-- Total Payment -->
    <div class="stat-card fade-in fade-in-5 bg-gradient-to-br from-emerald-600 to-teal-700 rounded-2xl p-6 shadow-lg shadow-emerald-500/10 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -translate-y-8 translate-x-8"></div>
        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/5 rounded-full translate-y-6 -translate-x-6"></div>
        <div class="relative z-10">
            <div class="flex items-center justify-between mb-4">
                <div class="w-11 h-11 rounded-xl bg-white/15 flex items-center justify-center">
                    <i class="fas fa-money-bill-trend-up text-white text-lg"></i>
                </div>
                <span class="text-xs font-semibold text-emerald-200 bg-white/10 px-3 py-1 rounded-full">Total</span>
            </div>
            <h3 class="text-2xl font-bold text-white"><%= new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR', minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(stats.pembayaranKeseluruhan) %></h3>
            <p class="text-emerald-200 text-sm mt-1">Total Pembayaran Keseluruhan</p>
        </div>
    </div>
</div>
<% } %>

<!-- Registration Overview -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-5 mb-8">
    <!-- Pendaftar & Kuota -->
    <div class="lg:col-span-1 space-y-5">
        <!-- Total Pendaftar -->
        <div class="stat-card fade-in bg-white rounded-2xl border border-gray-100 p-6 shadow-sm hover:shadow-md">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg shadow-blue-500/20 shrink-0">
                    <i class="fas fa-users text-white text-xl"></i>
                </div>
                <div>
                    <p class="text-sm text-gray-500 font-medium">Total Pendaftar</p>
                    <h3 class="text-2xl font-bold text-gray-900"><%= stats.cpdbTetap %></h3>
                </div>
            </div>
        </div>

        <!-- Sisa Kuota -->
        <div class="stat-card fade-in bg-white rounded-2xl border border-gray-100 p-6 shadow-sm hover:shadow-md">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-500 flex items-center justify-center shadow-lg shadow-amber-500/20 shrink-0">
                    <i class="fas fa-chair text-white text-xl"></i>
                </div>
                <div>
                    <p class="text-sm text-gray-500 font-medium">Sisa Kuota</p>
                    <h3 class="text-2xl font-bold text-gray-900"><%= stats.kuotaKeseluruhan %></h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Program Keahlian Stats -->
    <div class="lg:col-span-2 bg-white rounded-2xl border border-gray-100 p-6 shadow-sm fade-in">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h3 class="text-base font-bold text-gray-900">Statistik Program Keahlian</h3>
                <p class="text-xs text-gray-400 mt-0.5">Kuota dan pendaftar per jurusan</p>
            </div>
            <div class="w-9 h-9 rounded-xl bg-gray-50 flex items-center justify-center">
                <i class="fas fa-chart-bar text-gray-400 text-sm"></i>
            </div>
        </div>

        <div class="space-y-5">
            <% 
            const jurusanColorMap = {
                'AK': { bg: 'bg-blue-500', light: 'bg-blue-50', text: 'text-blue-600', ring: 'ring-blue-100' },
                'MP': { bg: 'bg-emerald-500', light: 'bg-emerald-50', text: 'text-emerald-600', ring: 'ring-emerald-100' },
                'BR': { bg: 'bg-violet-500', light: 'bg-violet-50', text: 'text-violet-600', ring: 'ring-violet-100' },
                'BD': { bg: 'bg-amber-500', light: 'bg-amber-50', text: 'text-amber-600', ring: 'ring-amber-100' },
                'DKV': { bg: 'bg-pink-500', light: 'bg-pink-50', text: 'text-pink-600', ring: 'ring-pink-100' },
                'TKJ': { bg: 'bg-cyan-500', light: 'bg-cyan-50', text: 'text-cyan-600', ring: 'ring-cyan-100' },
                'RPL': { bg: 'bg-indigo-500', light: 'bg-indigo-50', text: 'text-indigo-600', ring: 'ring-indigo-100' }
            };
            %>
            <% for (const jurusan of stats.jurusan) { 
                const colors = jurusanColorMap[jurusan.kode] || { bg: 'bg-gray-500', light: 'bg-gray-50', text: 'text-gray-600', ring: 'ring-gray-100' };
                const percentage = Math.round(((jurusan.kapasitas - jurusan.sisa_kapasitas) / jurusan.kapasitas) * 100);
            %>
            <div>
                <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center gap-2.5">
                        <span class="w-7 h-7 rounded-lg <%= colors.light %> flex items-center justify-center ring-1 <%= colors.ring %>">
                            <span class="text-[10px] font-bold <%= colors.text %>"><%= jurusan.kode %></span>
                        </span>
                        <span class="text-sm font-semibold text-gray-700"><%= jurusan.nama %></span>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="text-xs text-gray-400"><%= jurusan.kapasitas - jurusan.sisa_kapasitas %>/<%= jurusan.kapasitas %></span>
                        <span class="text-xs font-bold <%= colors.text %> <%= colors.light %> px-2 py-0.5 rounded-md"><%= percentage %>%</span>
                    </div>
                </div>
                <div class="w-full bg-gray-100 rounded-full h-2">
                    <div class="progress-bar-animated <%= colors.bg %> h-2 rounded-full" style="width: 0%" data-width="<%= percentage %>%"></div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<script>
// Current date
const dateEl = document.getElementById('currentDate');
if (dateEl) {
    const now = new Date();
    dateEl.textContent = now.toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' });
}

// Animate progress bars
setTimeout(() => {
    document.querySelectorAll('.progress-bar-animated').forEach(bar => {
        bar.style.width = bar.getAttribute('data-width');
    });
}, 300);
</script>
