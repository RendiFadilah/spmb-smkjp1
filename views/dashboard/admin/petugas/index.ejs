<!-- Page Title with gradient background -->
<div class="mb-8 bg-white p-6 rounded-xl border border-green-100">
    <h1 class="text-3xl font-bold text-gray-800">Data Petugas</h1>
    <p class="mt-2 text-gray-600">Kelola data petugas dan bendahara sekolah</p>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Petugas Stats -->
    <div class="bg-white rounded-xl shadow-lg border border-green-100 p-6 hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
        <div class="flex items-center">
            <div class="p-4 rounded-full bg-green-100 mr-4">
                <i class="fas fa-user-tie text-3xl text-green-600"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-600">Total Petugas</p>
                <h3 class="text-3xl font-bold text-gray-800" id="totalPetugas">-</h3>
            </div>
        </div>
    </div>
    <!-- Bendahara Stats -->
    <div class="bg-white rounded-xl shadow-lg border border-purple-100 p-6 hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
        <div class="flex items-center">
            <div class="p-4 rounded-full bg-purple-100 mr-4">
                <i class="fas fa-user-shield text-3xl text-purple-600"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-600">Total Bendahara</p>
                <h3 class="text-3xl font-bold text-gray-800" id="totalBendahara">-</h3>
            </div>
        </div>
    </div>
</div>

<!-- Nav Tabs -->
<div class="mb-6">
    <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button onclick="switchTab('all')" class="tab-btn active-tab border-green-500 text-green-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Semua
            </button>
            <button onclick="switchTab('petugas')" class="tab-btn border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Petugas
            </button>
            <button onclick="switchTab('bendahara')" class="tab-btn border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Bendahara
            </button>
        </nav>
    </div>
</div>

<!-- Search and Add Button with enhanced styling -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <!-- Search with animation -->
    <div class="relative flex-1 group">
        <input type="text" 
               id="searchInput" 
               class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 group-hover:border-green-300"
               placeholder="Cari berdasarkan nama atau nomor WhatsApp...">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none group-hover:text-green-500 transition-colors duration-200">
            <i class="fas fa-search text-gray-400"></i>
        </div>
        <!-- Clear search button -->
        <button id="clearSearch" 
                class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors duration-200 hidden">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <!-- Add Button with enhanced animation -->
    <button type="button" 
            onclick="openAddModal()"
            class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
        <i class="fas fa-plus mr-2"></i>
        Tambah Petugas
    </button>
</div>

<!-- No Results Message -->
<div id="noResults" class="hidden text-center py-8">
    <div class="inline-block p-4 rounded-full bg-gray-100 mb-4">
        <i class="fas fa-search text-4xl text-gray-400"></i>
    </div>
    <h3 class="text-lg font-medium text-gray-600">Tidak ada hasil yang ditemukan</h3>
    <p class="text-gray-500 mt-1">Coba kata kunci pencarian yang lain</p>
</div>

<!-- Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-200 hover:shadow-xl">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
            <thead class="bg-gray-50/75">
                <tr>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                        Nama Lengkap
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Nomor WhatsApp
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Jenis Kelamin
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Role
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Tanggal Daftar
                    </th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Aksi
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="petugasTableBody">
                <!-- Table rows will be dynamically populated -->
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Modal -->
<div id="petugasModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900" id="modalTitle">
                    Tambah Petugas
                </h3>
                <button type="button" onclick="closeModal('petugasModal')" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center transition-colors duration-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <!-- Modal body -->
            <form id="petugasForm" onsubmit="handleSubmit(event)" class="p-6">
                <input type="hidden" id="userId" name="id_user">
                <div class="grid gap-6 mb-6">
                    <div>
                        <label for="nama_lengkap" class="block mb-2 text-sm font-medium text-gray-900">Nama Lengkap</label>
                        <input type="text" id="nama_lengkap" name="nama_lengkap" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" required>
                    </div>
                    <div>
                        <label for="nomor_whatsapp" class="block mb-2 text-sm font-medium text-gray-900">Nomor WhatsApp</label>
                        <input type="text" id="nomor_whatsapp" name="nomor_whatsapp" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" required pattern="^(\+62|62|0)8[1-9][0-9]{6,9}$">
                    </div>
                    <div>
                        <label for="password" class="block mb-2 text-sm font-medium text-gray-900">Password</label>
                        <input type="password" id="password" name="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200">
                        <p class="mt-1 text-sm text-gray-500">Kosongkan jika tidak ingin mengubah password</p>
                    </div>
                    <div>
                        <label for="jenis_kelamin" class="block mb-2 text-sm font-medium text-gray-900">Jenis Kelamin</label>
                        <select id="jenis_kelamin" name="jenis_kelamin" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" required>
                            <option value="">Pilih Jenis Kelamin</option>
                            <option value="Laki-laki">Laki-laki</option>
                            <option value="Perempuan">Perempuan</option>
                        </select>
                    </div>
                    <div>
                        <label for="roles" class="block mb-2 text-sm font-medium text-gray-900">Role</label>
                        <select id="roles" name="roles" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" required>
                            <option value="Petugas">Petugas</option>
                            <option value="Bendahara">Bendahara</option>
                        </select>
                    </div>
                </div>
                <div class="flex items-center justify-end p-6 space-x-3 border-t border-gray-200 rounded-b">
                    <button type="button" onclick="closeModal('petugasModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                        Batal
                    </button>
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-200">
                        Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <div class="p-6 text-center">
                <i class="fas fa-exclamation-circle text-6xl text-red-500 mb-6"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">
                    Apakah Anda yakin ingin menghapus petugas ini?
                </h3>
                <button type="button" onclick="confirmDelete()" class="text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2 transition-all duration-200">
                    Ya, hapus
                </button>
                <button type="button" onclick="closeModal('deleteModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                    Batal
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let selectedId = null;
let currentTab = 'all';
let allData = [];

// Initialize DataTable
$(document).ready(function() {
    loadPetugasData();
    
    // Enhanced search functionality
    const searchInput = $('#searchInput');
    const clearButton = $('#clearSearch');
    
    searchInput.on('input', function() {
        const hasValue = $(this).val().length > 0;
        clearButton.toggleClass('hidden', !hasValue);
        filterData();
    });
    
    clearButton.on('click', function() {
        searchInput.val('');
        $(this).addClass('hidden');
        filterData();
        searchInput.focus();
    });
    
    // Add loading animation
    searchInput.on('focus', function() {
        $(this).parent().addClass('ring-2 ring-green-200');
    }).on('blur', function() {
        $(this).parent().removeClass('ring-2 ring-green-200');
    });
});

function loadPetugasData() {
    $.get('/api/admin/petugas', function(data) {
        allData = data;
        updateStats(data);
        filterData();
    }).fail(function() {
        showToast('Gagal memuat data petugas', 'error');
    });
}

function updateStats(data) {
    const totalPetugas = data.filter(user => user.roles === 'Petugas').length;
    const totalBendahara = data.filter(user => user.roles === 'Bendahara').length;
    
    $('#totalPetugas').text(totalPetugas);
    $('#totalBendahara').text(totalBendahara);
}

function filterData() {
    const searchValue = $('#searchInput').val().toLowerCase();
    let filteredData = allData;
    
    // Filter by tab
    if (currentTab !== 'all') {
        filteredData = filteredData.filter(user => user.roles.toLowerCase() === currentTab);
    }
    
    // Enhanced search filter
    if (searchValue) {
        filteredData = filteredData.filter(user => 
            user.nama_lengkap.toLowerCase().includes(searchValue) ||
            user.nomor_whatsapp.toLowerCase().includes(searchValue) ||
            user.roles.toLowerCase().includes(searchValue) ||
            (user.jenis_kelamin && user.jenis_kelamin.toLowerCase().includes(searchValue))
        );
    }
    
    // Show/hide no results message
    $('#noResults').toggleClass('hidden', filteredData.length > 0);
    
    renderTable(filteredData);
}

function renderTable(data) {
    const tbody = $('#petugasTableBody');
    tbody.fadeOut(150, function() {
        tbody.empty();
        
        data.forEach(function(petugas) {
            const row = `
                <tr class="hover:bg-gray-50/60 transition-all duration-200 transform hover:scale-[1.01] hover:shadow-sm">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="text-sm font-medium text-gray-900 group-hover:text-green-600 transition-colors">${petugas.nama_lengkap}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="https://wa.me/${petugas.nomor_whatsapp.replace(/^0/, '62')}" 
                           target="_blank"
                           class="inline-flex items-center px-3 py-1 rounded-lg bg-green-50 hover:bg-green-100 transition-all duration-200 hover:shadow-sm">
                            <i class="fab fa-whatsapp text-green-600 mr-2"></i>
                            <span class="text-sm text-green-700">${petugas.nomor_whatsapp}</span>
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${petugas.jenis_kelamin || '-'}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full ${petugas.roles === 'Bendahara' ? 'bg-purple-100 text-purple-800' : 'bg-green-100 text-green-800'}">${petugas.roles}</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${new Date(petugas.tanggal_daftar).toLocaleDateString('id-ID')}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button onclick="editPetugas(${petugas.id_user})" class="text-green-600 hover:text-green-800 mr-3 transition-colors duration-200">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button onclick="deletePetugas(${petugas.id_user})" class="text-green-600 hover:text-green-800 transition-colors duration-200">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>`;
            tbody.append(row);
        });
        tbody.fadeIn(150);
    });
}

function switchTab(tab) {
    currentTab = tab;
    
    // Update tab styling
    $('.tab-btn').removeClass('active-tab border-green-500 text-green-600')
        .addClass('border-transparent text-gray-500');
    $(`.tab-btn:contains('${tab === 'all' ? 'Semua' : tab === 'petugas' ? 'Petugas' : 'Bendahara'}')`)
        .addClass('active-tab border-green-500 text-green-600')
        .removeClass('border-transparent text-gray-500');
    
    filterData();
}

function openAddModal() {
    $('#modalTitle').text('Tambah Petugas');
    $('#petugasForm')[0].reset();
    $('#userId').val('');
    $('#password').prop('required', true);
    openModal('petugasModal');
}

function editPetugas(id) {
    selectedId = id;
    $('#modalTitle').text('Edit Petugas');
    $('#password').prop('required', false);
    
    $.get(`/api/admin/petugas/${id}`, function(data) {
        $('#userId').val(data.id_user);
        $('#nama_lengkap').val(data.nama_lengkap);
        $('#nomor_whatsapp').val(data.nomor_whatsapp);
        $('#jenis_kelamin').val(data.jenis_kelamin || '');
        $('#roles').val(data.roles);
        openModal('petugasModal');
    });
}

function deletePetugas(id) {
    selectedId = id;
    openModal('deleteModal');
}

function confirmDelete() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/petugas/${selectedId}`,
            type: 'DELETE',
            success: function() {
                closeModal('deleteModal');
                loadPetugasData();
                showToast('Petugas berhasil dihapus');
            },
            error: function() {
                showToast('Gagal menghapus petugas', 'error');
            }
        });
    }
}

function handleSubmit(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());
    
    if (!data.password) delete data.password;
    
    const url = data.id_user ? `/api/admin/petugas/${data.id_user}` : '/api/admin/petugas';
    const method = data.id_user ? 'PUT' : 'POST';
    
    $.ajax({
        url: url,
        type: method,
        data: data,
        success: function() {
            closeModal('petugasModal');
            loadPetugasData();
            showToast(`Petugas berhasil ${data.id_user ? 'diperbarui' : 'ditambahkan'}`);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan', 'error');
        }
    });
}

function openModal(modalId) {
    $(`#${modalId}`).removeClass('hidden').addClass('animate-fade-in');
}

function closeModal(modalId) {
    $(`#${modalId}`).addClass('hidden').removeClass('animate-fade-in');
}

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}
</script>

<style>
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.animate-fade-in {
    animation: fadeIn 0.3s ease-in-out;
}

.active-tab {
    position: relative;
}

.active-tab::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: currentColor;
}
</style>
