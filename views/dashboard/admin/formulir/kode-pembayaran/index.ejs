<!-- Page Title with gradient background -->
<div class="mb-8 bg-white p-6 rounded-xl border border-green-100">
    <h1 class="text-3xl font-bold text-gray-800">Data Kode Pembayaran</h1>
    <p class="mt-2 text-gray-600">Kelola data kode pembayaran PPDB</p>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Total Kode -->
    <div class="bg-white rounded-xl shadow-lg border border-green-100 p-6 hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
        <div class="flex items-center">
            <div class="p-4 rounded-full bg-green-100 mr-4">
                <i class="fas fa-ticket-alt text-3xl text-green-600"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-600">Total Kode</p>
                <h3 class="text-3xl font-bold text-gray-800" id="totalKode">-</h3>
            </div>
        </div>
    </div>
    <!-- Kode Terpakai -->
    <div class="bg-white rounded-xl shadow-lg border border-blue-100 p-6 hover:shadow-xl transition-all duration-200 transform hover:-translate-y-1">
        <div class="flex items-center">
            <div class="p-4 rounded-full bg-blue-100 mr-4">
                <i class="fas fa-check-circle text-3xl text-blue-600"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-600">Kode Terpakai</p>
                <h3 class="text-3xl font-bold text-gray-800" id="kodeTerpakai">-</h3>
            </div>
        </div>
    </div>
</div>

<!-- Search and Action Buttons -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <!-- Search -->
    <div class="relative flex-1 group">
        <input type="text" 
               id="searchInput" 
               class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 group-hover:border-green-300"
               placeholder="Cari berdasarkan kode bayar...">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none group-hover:text-green-500 transition-colors duration-200">
            <i class="fas fa-search text-gray-400"></i>
        </div>
        <!-- Clear search button -->
        <button id="clearSearch" 
                class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors duration-200 hidden">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <!-- Action Buttons -->
    <div class="flex gap-3">
        <button type="button" 
                onclick="openResetModal()"
                class="inline-flex items-center px-6 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            <i class="fas fa-undo mr-2"></i>
            Reset Status
        </button>
        <button type="button" 
                onclick="openAddModal()"
                class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            <i class="fas fa-plus mr-2"></i>
            Tambah Kode
        </button>
        <button type="button" 
                onclick="openImportModal()"
                class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            <i class="fas fa-file-excel mr-2"></i>
            Import Excel
        </button>
    </div>
</div>

<!-- Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-200 hover:shadow-xl">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Kode Bayar
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Status
                    </th>
                    <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Aksi
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="kodeTableBody">
                <!-- Table rows will be dynamically populated -->
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Modal -->
<div id="kodeModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900" id="modalTitle">
                    Tambah Kode Pembayaran
                </h3>
                <button type="button" onclick="closeModal('kodeModal')" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center transition-colors duration-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <!-- Modal body -->
            <form id="kodeForm" onsubmit="handleSubmit(event)" class="p-6">
                <input type="hidden" id="kodeId" name="id_kode_pembayaran">
                <div class="grid gap-6 mb-6">
                    <div>
                        <label for="kode_bayar" class="block mb-2 text-sm font-medium text-gray-900">Kode Bayar</label>
                        <input type="text" id="kode_bayar" name="kode_bayar" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" required>
                    </div>
                    <div>
                        <label for="status" class="block mb-2 text-sm font-medium text-gray-900">Status</label>
                        <select id="status" name="status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200" required>
                            <option value="Belum Terpakai">Belum Terpakai</option>
                            <option value="Sudah Terpakai">Sudah Terpakai</option>
                        </select>
                    </div>
                </div>
                <div class="flex items-center justify-end p-6 space-x-3 border-t border-gray-200 rounded-b">
                    <button type="button" onclick="closeModal('kodeModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                        Batal
                    </button>
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-200">
                        Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reset Confirmation Modal -->
<div id="resetModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <div class="p-6 text-center">
                <i class="fas fa-exclamation-triangle text-6xl text-yellow-500 mb-6"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">
                    Apakah Anda yakin ingin mereset status semua kode pembayaran menjadi "Belum Terpakai"?
                </h3>
                <button type="button" onclick="confirmReset()" class="text-white bg-yellow-600 hover:bg-yellow-700 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2 transition-all duration-200">
                    Ya, reset semua
                </button>
                <button type="button" onclick="closeModal('resetModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                    Batal
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Import Modal -->
<div id="importModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <div class="flex items-center justify-between p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">
                    Import Kode Pembayaran
                </h3>
                <button type="button" onclick="closeModal('importModal')" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center transition-colors duration-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="importForm" onsubmit="handleImport(event)" class="p-6">
                <div class="mb-6">
                    <label class="block mb-2 text-sm font-medium text-gray-900">File Excel</label>
                    <input type="file" 
                           id="excelFile" 
                           name="file" 
                           accept=".xlsx,.xls"
                           class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none"
                           required>
                    <div class="mt-2 flex items-center gap-2">
                        <p class="text-sm text-gray-500">Format: .xlsx atau .xls</p>
                        <a href="/api/admin/kode-pembayaran/template" 
                           class="text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors duration-200">
                            <i class="fas fa-download mr-1"></i>
                            Download Template
                        </a>
                    </div>
                    <div class="mt-2 space-y-1">
                        <p class="text-xs text-gray-500">
                            • Pastikan menggunakan template yang disediakan
                        </p>
                        <p class="text-xs text-gray-500">
                            • Kolom yang harus diisi: No, Kode Bayar, Status
                        </p>
                        <p class="text-xs text-gray-500">
                            • Status hanya boleh diisi: Belum Terpakai atau Sudah Terpakai
                        </p>
                    </div>
                </div>
                <div class="flex items-center justify-end space-x-3">
                    <button type="button" onclick="closeModal('importModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                        Batal
                    </button>
                    <button type="submit" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-200">
                        Import
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <div class="p-6 text-center">
                <i class="fas fa-exclamation-circle text-6xl text-red-500 mb-6"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">
                    Apakah Anda yakin ingin menghapus kode pembayaran ini?
                </h3>
                <button type="button" onclick="confirmDelete()" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2 transition-all duration-200">
                    Ya, hapus
                </button>
                <button type="button" onclick="closeModal('deleteModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                    Batal
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function openImportModal() {
    openModal('importModal');
}

function handleImport(event) {
    event.preventDefault();
    
    const formData = new FormData();
    const fileInput = document.getElementById('excelFile');
    formData.append('file', fileInput.files[0]);
    
    $.ajax({
        url: '/api/admin/kode-pembayaran/import',
        type: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        success: function(response) {
            closeModal('importModal');
            loadKodeData();
            showToast(response.message);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Gagal mengimpor data', 'error');
        }
    });
}

function openResetModal() {
    openModal('resetModal');
}

function confirmReset() {
    $.ajax({
        url: '/api/admin/kode-pembayaran/reset-status',
        type: 'POST',
        success: function() {
            closeModal('resetModal');
            loadKodeData();
            showToast('Status kode pembayaran berhasil direset');
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Gagal mereset status kode pembayaran', 'error');
        }
    });
}

let selectedId = null;
let allData = [];

// Initialize DataTable
$(document).ready(function() {
    loadKodeData();
    
    // Enhanced search functionality
    const searchInput = $('#searchInput');
    const clearButton = $('#clearSearch');
    
    searchInput.on('input', function() {
        const hasValue = $(this).val().length > 0;
        clearButton.toggleClass('hidden', !hasValue);
        filterData();
    });
    
    clearButton.on('click', function() {
        searchInput.val('');
        $(this).addClass('hidden');
        filterData();
        searchInput.focus();
    });
    
    // Add loading animation
    searchInput.on('focus', function() {
        $(this).parent().addClass('ring-2 ring-green-200');
    }).on('blur', function() {
        $(this).parent().removeClass('ring-2 ring-green-200');
    });
});

function loadKodeData() {
    $.get('/api/admin/kode-pembayaran', function(data) {
        allData = data;
        updateStats(data);
        filterData();
    }).fail(function() {
        showToast('Gagal memuat data kode pembayaran', 'error');
    });
}

function updateStats(data) {
    $('#totalKode').text(data.length);
    const kodeTerpakai = data.filter(kode => kode.status === 'Sudah Terpakai').length;
    $('#kodeTerpakai').text(kodeTerpakai);
}

function filterData() {
    const searchValue = $('#searchInput').val().toLowerCase();
    let filteredData = allData;
    
    if (searchValue) {
        filteredData = filteredData.filter(kode => 
            kode.kode_bayar.toLowerCase().includes(searchValue)
        );
    }
    
    renderTable(filteredData);
}

function renderTable(data) {
    const tbody = $('#kodeTableBody');
    tbody.fadeOut(150, function() {
        tbody.empty();
        
        data.forEach(function(kode) {
            const statusClass = kode.status === 'Sudah Terpakai' 
                ? 'bg-green-100 text-green-800' 
                : 'bg-yellow-100 text-yellow-800';
            
            const isUsed = kode.status === 'Sudah Terpakai';
            const buttonClass = isUsed ? 'text-gray-400 cursor-not-allowed' : 'text-green-600 hover:text-green-800';
            const row = `
                <tr class="hover:bg-gray-50 transition-all duration-200 transform hover:scale-[1.01]">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${kode.kode_bayar}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full ${statusClass}">
                            ${kode.status}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button ${isUsed ? 'disabled' : `onclick="editKode(${kode.id_kode_pembayaran})"`} 
                                class="${buttonClass} mr-3 transition-colors duration-200" 
                                title="${isUsed ? 'Kode pembayaran sudah terpakai tidak dapat diedit' : 'Edit kode pembayaran'}">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button ${isUsed ? 'disabled' : `onclick="deleteKode(${kode.id_kode_pembayaran})"`} 
                                class="${buttonClass} transition-colors duration-200"
                                title="${isUsed ? 'Kode pembayaran sudah terpakai tidak dapat dihapus' : 'Hapus kode pembayaran'}">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>`;
            tbody.append(row);
        });
        tbody.fadeIn(150);
    });
}

function openAddModal() {
    $('#modalTitle').text('Tambah Kode Pembayaran');
    $('#kodeForm')[0].reset();
    $('#kodeId').val('');
    $('#status').val('Belum Terpakai');
    $('#status option[value="Sudah Terpakai"]').prop('disabled', false); // Enable the option when adding new
    openModal('kodeModal');
}

function editKode(id) {
    selectedId = id;
    
    $.get(`/api/admin/kode-pembayaran/${id}`, function(data) {
        // Prevent editing if status is "Sudah Terpakai"
        if (data.status === 'Sudah Terpakai') {
            showToast('Kode pembayaran yang sudah terpakai tidak dapat diedit', 'error');
            return;
        }

        $('#modalTitle').text('Edit Kode Pembayaran');
        $('#kodeId').val(data.id_kode_pembayaran);
        $('#kode_bayar').val(data.kode_bayar);
        $('#status').val(data.status);
        // Disable the "Sudah Terpakai" option when editing
        $('#status option[value="Sudah Terpakai"]').prop('disabled', true);
        openModal('kodeModal');
    });
}

function deleteKode(id) {
    // Get the kode data first to check status
    $.get(`/api/admin/kode-pembayaran/${id}`, function(data) {
        // Prevent deletion if status is "Sudah Terpakai"
        if (data.status === 'Sudah Terpakai') {
            showToast('Kode pembayaran yang sudah terpakai tidak dapat dihapus', 'error');
            return;
        }

        selectedId = id;
        openModal('deleteModal');
    });
}

function confirmDelete() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/kode-pembayaran/${selectedId}`,
            type: 'DELETE',
            success: function() {
                closeModal('deleteModal');
                loadKodeData();
                showToast('Kode pembayaran berhasil dihapus');
            },
            error: function() {
                showToast('Gagal menghapus kode pembayaran', 'error');
            }
        });
    }
}

function handleSubmit(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());
    
    // If editing, prevent changing status to "Sudah Terpakai"
    if (data.id_kode_pembayaran) {
        $.get(`/api/admin/kode-pembayaran/${data.id_kode_pembayaran}`, function(existingData) {
            if (existingData.status === 'Belum Terpakai' && data.status === 'Sudah Terpakai') {
                showToast('Status kode pembayaran tidak dapat diubah menjadi Sudah Terpakai', 'error');
                return;
            }
            
            submitData(data);
        });
    } else {
        submitData(data);
    }
}

function submitData(data) {
    const url = data.id_kode_pembayaran ? 
        `/api/admin/kode-pembayaran/${data.id_kode_pembayaran}` : 
        '/api/admin/kode-pembayaran';
    const method = data.id_kode_pembayaran ? 'PUT' : 'POST';
    
    $.ajax({
        url: url,
        type: method,
        data: data,
        success: function() {
            closeModal('kodeModal');
            loadKodeData();
            showToast(`Kode pembayaran berhasil ${data.id_kode_pembayaran ? 'diperbarui' : 'ditambahkan'}`);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan', 'error');
        }
    });
}

function openModal(modalId) {
    $(`#${modalId}`).removeClass('hidden').addClass('animate-fade-in');
}

function closeModal(modalId) {
    $(`#${modalId}`).addClass('hidden').removeClass('animate-fade-in');
}

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}
</script>

<style>
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

.animate-fade-in {
    animation: fadeIn 0.3s ease-in-out;
}
</style>
