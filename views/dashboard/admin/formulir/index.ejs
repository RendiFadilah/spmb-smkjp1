<script>
let selectedId = null;
let allData = [];
let activeTab = 'today'; // Default active tab

// Initialize DataTable
$(document).ready(function() {
    loadFormulirData(activeTab);
    
    // Enhanced search functionality
    const searchInput = $('#searchInput');
    const clearButton = $('#clearSearch');
    
    searchInput.on('input', function() {
        const hasValue = $(this).val().length > 0;
        clearButton.toggleClass('hidden', !hasValue);
        filterData();
    });
    
    clearButton.on('click', function() {
        searchInput.val('');
        $(this).addClass('hidden');
        filterData();
        searchInput.focus();
    });
    
    // Add loading animation
    searchInput.on('focus', function() {
        $(this).parent().addClass('ring-2 ring-green-200');
    }).on('blur', function() {
        $(this).parent().removeClass('ring-2 ring-green-200');
    });
});

function loadFormulirData(tab = 'today') {
    const endpoint = tab === 'today' ? '/api/admin/formulir/today' : '/api/admin/formulir';
    $.get(endpoint, function(data) {
        allData = data;
        updateStats(tab);
        filterData();
    }).fail(function(xhr) {
        if (tab === 'today') {
            // If today's data fails, fallback to all data
            loadFormulirData('all');
        } else {
            showToast('Gagal memuat data formulir', 'error');
        }
    });
}

function updateStats(tab = 'today') {
    const endpoint = tab === 'today' ? '/api/admin/formulir/data/stats/today' : '/api/admin/formulir/data/stats';
    $.get(endpoint, function(stats) {
        $('#totalFormulir').text(stats.total);
        $('#formulirProses').text(stats.proses);
        $('#formulirTerverifikasi').text(stats.terverifikasi);
        if ($('#totalUang').length) {
            $('#totalUang').text(`Rp ${parseInt(stats.totalUang || 0).toLocaleString('id-ID')}`);
        }
    }).fail(function(xhr) {
        if (tab === 'today') {
            // If today's stats fail, fallback to all stats
            updateStats('all');
        } else {
            $('#totalFormulir').text('0');
            $('#formulirProses').text('0');
            $('#formulirTerverifikasi').text('0');
            $('#totalUang').text('Rp 0');
        }
    });
}

function switchTab(tab) {
    activeTab = tab;
    
    // Update tab styles
    if (tab === 'today') {
        $('#todayTab').addClass('bg-green-100 text-green-800').removeClass('text-gray-600 hover:bg-gray-100');
        $('#allTab').removeClass('bg-green-100 text-green-800').addClass('text-gray-600 hover:bg-gray-100');
    } else {
        $('#allTab').addClass('bg-green-100 text-green-800').removeClass('text-gray-600 hover:bg-gray-100');
        $('#todayTab').removeClass('bg-green-100 text-green-800').addClass('text-gray-600 hover:bg-gray-100');
    }
    
    // Load data for selected tab
    loadFormulirData(tab);
}

function filterData() {
    const searchValue = $('#searchInput').val().toLowerCase();
    let filteredData = allData;
    
    if (searchValue) {
        filteredData = filteredData.filter(form => 
            form.nama_lengkap.toLowerCase().includes(searchValue) ||
            form.no_formulir.toString().includes(searchValue)
        );
    }
    
    renderTable(filteredData);
}

function renderTable(data) {
    const tbody = $('#formulirTableBody');
    tbody.fadeOut(150, function() {
        tbody.empty();
        
        data.forEach(function(form) {
            const statusClass = form.status === 'Terverifikasi' 
                ? 'bg-green-100 text-green-800' 
                : 'bg-yellow-100 text-yellow-800';
            
            const row = `
                <tr class="hover:bg-gray-50 transition-all duration-200 transform hover:scale-[1.01]">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${form.no_formulir}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${form.nama_lengkap}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Rp ${parseInt(form.nominal_formulir).toLocaleString('id-ID')}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        ${form.metode_pembayaran ? 
                            `<span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full ${
                                form.metode_pembayaran === 'Transfer' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800'
                            }">
                                ${form.metode_pembayaran}
                            </span>` 
                            : '-'
                        }
                    </td>
