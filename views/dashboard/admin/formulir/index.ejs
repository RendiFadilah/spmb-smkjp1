function openAddModal() {
    $('#modalTitle').text('Tambah Formulir');
    $('#formulirForm')[0].reset();
    $('#formulirId').val('');
    
    // Load eligible CPDB
    $.get('/api/admin/formulir/data/eligible-cpdb', function(data) {
        const select = $('#id_user');
        select.empty().append('<option value="">Pilih CPDB</option>');
        data.forEach(cpdb => {
            select.append(`<option value="${cpdb.id_user}">${cpdb.nama_lengkap} (${cpdb.nisn}) - ${cpdb.asal_smp}</option>`);
        });
    });
    
    // Load available payment codes
    $.get('/api/admin/formulir/data/available-codes', function(data) {
        const select = $('#id_kode_pembayaran');
        select.empty().append('<option value="">Pilih Kode Pembayaran</option>');
        data.forEach(code => {
            select.append(`<option value="${code.id_kode_pembayaran}">${code.kode_bayar}</option>`);
        });
    });
    
    openModal('formulirModal');
}

function showDetail(id) {
    $.get(`/api/admin/formulir/${id}`, function(data) {
        $('#detail_no_formulir').text(data.no_formulir);
        $('#detail_tanggal').text(new Date(data.tanggal).toLocaleDateString('id-ID'));
        $('#detail_nama_cpdb').text(data.nama_lengkap);
        $('#detail_kode_bayar').text(data.kode_bayar);
        $('#detail_nominal').text(`Rp ${parseInt(data.nominal_formulir).toLocaleString('id-ID')}`);
        $('#detail_status').text(data.status);
        $('#detail_verifikator').text(data.verifikator);
        
        if (data.bukti_bayar) {
            $('#detail_bukti_bayar').attr('src', data.bukti_bayar).removeClass('hidden');
            $('#detail_no_bukti').addClass('hidden');
        } else {
            $('#detail_bukti_bayar').addClass('hidden');
            $('#detail_no_bukti').removeClass('hidden');
        }
        
        openModal('detailModal');
    });
}

function editFormulir(id) {
    selectedId = id;
    $('#modalTitle').text('Edit Formulir');
    
    $.get(`/api/admin/formulir/${id}`, function(data) {
        $('#formulirId').val(data.id_formulir);
        // Format nominal when editing
        $('#nominal_formulir').val(parseInt(data.nominal_formulir).toLocaleString('id-ID'));
        
        // Load current CPDB
        const userSelect = $('#id_user');
        userSelect.empty().append(`<option value="${data.id_user}">${data.nama_lengkap}</option>`);
        userSelect.prop('disabled', true);
        
        // Load current payment code
        const codeSelect = $('#id_kode_pembayaran');
        codeSelect.empty().append(`<option value="${data.id_kode_pembayaran}">${data.kode_bayar}</option>`);
        codeSelect.prop('disabled', true);
        
        openModal('formulirModal');
    });
}

function deleteFormulir(id) {
    selectedId = id;
    openModal('deleteModal');
}

function confirmDelete() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/formulir/${selectedId}`,
            type: 'DELETE',
            success: function() {
                closeModal('deleteModal');
                loadFormulirData(activeTab);
                showToast('Formulir berhasil dihapus');
            },
            error: function() {
                showToast('Gagal menghapus formulir', 'error');
            }
        });
    }
}

function formatNominal(input) {
    // Remove non-digit characters
    let value = input.value.replace(/\D/g, '');
    
    // Format with thousand separator
    value = value.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
    
    // Update input value
    input.value = value;
}

function unformatNominal(value) {
    // Remove all non-digit characters
    return value.replace(/\D/g, '');
}

function handleSubmit(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    
    // Unformat nominal before sending
    const nominal = unformatNominal(formData.get('nominal_formulir'));
    formData.set('nominal_formulir', nominal);
    
    const url = formData.get('id_formulir') ? 
        `/api/admin/formulir/${formData.get('id_formulir')}` : 
        '/api/admin/formulir';
    const method = formData.get('id_formulir') ? 'PUT' : 'POST';
    
    $.ajax({
        url: url,
        type: method,
        data: formData,
        processData: false,
        contentType: false,
        success: function() {
            closeModal('formulirModal');
            loadFormulirData(activeTab);
            showToast(`Formulir berhasil ${formData.get('id_formulir') ? 'diperbarui' : 'ditambahkan'}`);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan', 'error');
        }
    });
}


function openModal(modalId) {
    $(`#${modalId}`).removeClass('hidden').addClass('animate-fade-in');
}

function closeModal(modalId) {
    $(`#${modalId}`).addClass('hidden').removeClass('animate-fade-in');
}

function toggleNamaPengirim() {
    const metodePembayaran = document.getElementById('metode_pembayaran').value;
    const namaPengirimContainer = document.getElementById('nama_pengirim_container');
    const namaPengirimInput = document.getElementById('nama_pengirim');
    
    if (metodePembayaran === 'Transfer') {
        namaPengirimContainer.style.display = 'block';
        namaPengirimInput.required = true;
    } else {
        namaPengirimContainer.style.display = 'none';
        namaPengirimInput.required = false;
        namaPengirimInput.value = ''; // Clear the value when hidden
    }
}

// Call toggleNamaPengirim on page load to set initial state
document.addEventListener('DOMContentLoaded', function() {
    toggleNamaPengirim();
});

function printKuitansi(id) {
    // Get form data first
    $.get(`/api/admin/formulir/${id}`, function(data) {
        // Open receipt in new window
        const receiptWindow = window.open('/dashboard/admin/formulir/cetak-kuitansi?data=' + encodeURIComponent(JSON.stringify(data)), '_blank');
        
        // Print automatically when loaded
        if (receiptWindow) {
            receiptWindow.onload = function() {
                setTimeout(() => {
                    receiptWindow.print();
                }, 500);
            };
        }
    });
}



function verifyFormulir(id) {
    selectedId = id;
    openModal('verifyModal');
}

function confirmVerify() {
    if (selectedId) {
        $.ajax({
            url: `/api/admin/formulir/${selectedId}/verify`,
            type: 'PUT',
            success: function() {
                closeModal('verifyModal');
                loadFormulirData(activeTab);
                showToast('Formulir berhasil diverifikasi', 'success');
            },
            error: function(xhr) {
                showToast(xhr.responseJSON?.message || 'Gagal memverifikasi formulir', 'error');
            }
        });
    }
}

function showToast(message, type = 'success') {
    Toastify({
        text: message,
        duration: 3000,
        gravity: "top",
        position: "right",
        backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
        className: "rounded-lg shadow-lg",
    }).showToast();
}

