    }
}

function exportData(type) {
    // Show loading state
    const button = event.target.closest('button');
    const originalText = button.innerHTML;
    button.innerHTML = `<i class="fas fa-spinner fa-spin mr-2"></i>Mengekspor...`;
    button.disabled = true;

    // Create a hidden iframe for download
    const iframe = document.createElement('iframe');
    iframe.style.display = 'none';
    document.body.appendChild(iframe);

    // Set iframe source to trigger download
    iframe.src = `/api/admin/pembayaran/export/${type}`;

    // Handle download completion or error
    const checkDownload = setInterval(() => {
        try {
            // Check if iframe has loaded
            if (iframe.contentWindow.document.readyState === 'complete') {
                clearInterval(checkDownload);
                document.body.removeChild(iframe);
                button.innerHTML = originalText;
                button.disabled = false;
            }
        } catch (e) {
            // If we can't access iframe content, assume download started
            clearInterval(checkDownload);
            document.body.removeChild(iframe);
            button.innerHTML = originalText;
            button.disabled = false;
        }
    }, 1000);

    // Timeout after 10 seconds
    setTimeout(() => {
        clearInterval(checkDownload);
        if (document.body.contains(iframe)) {
            document.body.removeChild(iframe);
        }
        button.innerHTML = originalText;
        button.disabled = false;
    }, 10000);
}
