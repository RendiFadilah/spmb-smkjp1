<!-- Page Title with gradient background -->
<div class="mb-8 bg-white p-6 rounded-xl border border-green-100">
    <h1 class="text-3xl font-bold text-gray-800">Data Pembayaran</h1>
    <p class="mt-2 text-gray-600">Kelola data pembayaran PPDB</p>
</div>

<!-- Tabs -->
<div class="mb-6 bg-white rounded-xl border border-gray-100 p-2">
    <div class="flex space-x-2">
        <button type="button" 
                onclick="switchTab('today')" 
                id="todayTab"
                class="flex-1 px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 bg-green-100 text-green-800">
            Hari Ini
        </button>
        <button type="button" 
                onclick="switchTab('all')" 
                id="allTab"
                class="flex-1 px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 text-gray-600 hover:bg-gray-100">
            Keseluruhan
        </button>
        <button type="button" 
                onclick="switchTab('lunas')" 
                id="lunasTab"
                class="flex-1 px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 text-gray-600 hover:bg-gray-100">
            Lunas
        </button>
        <button type="button" 
                onclick="switchTab('belum-lunas')" 
                id="belumLunasTab"
                class="flex-1 px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 text-gray-600 hover:bg-gray-100">
            Belum Lunas
        </button>
    </div>
</div>

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <!-- Total Pembayaran -->
    <div class="bg-white rounded-lg shadow-sm border border-green-100 p-4 hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5">
        <div class="flex items-center space-x-3">
            <div class="p-3 rounded-lg bg-green-50">
                <i class="fas fa-file-invoice-dollar text-lg text-green-500"></i>
            </div>
            <div class="flex-1">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Total Pembayaran</p>
                <div class="flex items-baseline mt-1">
                    <h3 class="text-xl font-semibold text-gray-800 total-pembayaran"><%= payments.length %></h3>
                    <p class="ml-2 text-xs text-gray-400">pembayaran</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Pembayaran Lunas -->
    <div class="bg-white rounded-lg shadow-sm border border-blue-100 p-4 hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5">
        <div class="flex items-center space-x-3">
            <div class="p-3 rounded-lg bg-blue-50">
                <i class="fas fa-check-circle text-lg text-blue-500"></i>
            </div>
            <div class="flex-1">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Lunas</p>
                <div class="flex items-baseline mt-1">
                    <h3 class="text-xl font-semibold text-gray-800 total-lunas">
                        <%= payments.filter(p => p.status_pelunasan === 'LUNAS').length %>
                    </h3>
                    <p class="ml-2 text-xs text-gray-400">pembayaran</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Pembayaran Belum Lunas -->
    <div class="bg-white rounded-lg shadow-sm border border-yellow-100 p-4 hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5">
        <div class="flex items-center space-x-3">
            <div class="p-3 rounded-lg bg-yellow-50">
                <i class="fas fa-clock text-lg text-yellow-500"></i>
            </div>
            <div class="flex-1">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Belum Lunas</p>
                <div class="flex items-baseline mt-1">
                    <h3 class="text-xl font-semibold text-gray-800 total-belum-lunas">
                        <%= payments.filter(p => p.status_pelunasan === 'BELUM_LUNAS').length %>
                    </h3>
                    <p class="ml-2 text-xs text-gray-400">pembayaran</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Uang -->
    <div class="bg-white rounded-lg shadow-sm border border-emerald-100 p-4 hover:shadow-md transition-all duration-200 transform hover:-translate-y-0.5">
        <div class="flex items-center space-x-3">
            <div class="p-3 rounded-lg bg-emerald-50">
                <i class="fas fa-money-bill-wave text-lg text-emerald-500"></i>
            </div>
            <div class="flex-1">
                <p class="text-xs font-medium text-gray-500 uppercase tracking-wide">Total Uang</p>
                <div class="flex items-baseline mt-1">
                    <h3 class="text-xl font-semibold text-gray-800 total-uang">
                        Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(
                            payments.reduce((sum, p) => sum + (parseFloat(p.total_verified) || 0), 0)
                        ) %>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search, Export and Add Buttons -->
<div class="mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex flex-col sm:flex-row gap-4 flex-1">
        <!-- Search -->
        <div class="relative flex-1 group">
            <input type="text" 
                   id="searchInput" 
                   class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 group-hover:border-green-300"
                   placeholder="Cari berdasarkan nama atau nomor formulir...">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none group-hover:text-green-500 transition-colors duration-200">
                <i class="fas fa-search text-gray-400"></i>
            </div>
            <button id="clearSearch" 
                    class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors duration-200 hidden">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <!-- Export Buttons -->
        <div class="flex gap-2">
            <button onclick="exportData('today')"
                    class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                <i class="fas fa-file-excel mr-2"></i>
                Export Hari Ini
            </button>
            <button onclick="exportData('all')"
                    class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                <i class="fas fa-file-excel mr-2"></i>
                Export Semua
            </button>
        </div>
    </div>
</div>

<!-- Add Button -->
<div class="mb-6 flex justify-end">
    <button type="button"
            onclick="openAddModal()"
            class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
        <i class="fas fa-plus mr-2"></i>
        Tambah Pembayaran
    </button>
</div>

<!-- Add/Edit Modal -->
<div id="paymentModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-2xl transform transition-all duration-300">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900" id="modalTitle">
                    Tambah Pembayaran
                </h3>
                <button type="button" onclick="closeModal('paymentModal')" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center transition-colors duration-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <!-- Modal body -->
            <form id="paymentForm" onsubmit="handleSubmit(event)" class="p-6" enctype="multipart/form-data">
                <input type="hidden" id="paymentId" name="id_pembayaran">
                <div class="grid gap-6 mb-6">
                    <div>
                        <label for="id_user" class="block mb-2 text-sm font-medium text-gray-900">Pilih CPDB</label>
                        <select id="id_user" 
                                name="id_user" 
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200"
                                required>
                            <option value="">Pilih CPDB</option>
                        </select>
                    </div>
                    <div>
                        <label for="total_biaya" class="block mb-2 text-sm font-medium text-gray-900">Total Biaya</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">Rp</span>
                            <input type="text" 
                                   id="total_biaya" 
                                   name="total_biaya" 
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 pl-10 transition-all duration-200" 
                                   required 
                                   readonly>
                        </div>
                    </div>
                    <div>
                        <label for="metode_pembayaran" class="block mb-2 text-sm font-medium text-gray-900">Metode Pembayaran</label>
                        <select id="metode_pembayaran" 
                                name="metode_pembayaran" 
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200"
                                required
                                onchange="toggleNamaPengirim()">
                            <option value="">Pilih Metode Pembayaran</option>
                            <option value="TUNAI">Tunai</option>
                            <option value="TRANSFER">Transfer</option>
                        </select>
                    </div>
                    <div id="nama_pengirim_container" style="display: none;">
                        <label for="nama_pengirim" class="block mb-2 text-sm font-medium text-gray-900">Nama Pengirim</label>
                        <input type="text" 
                               id="nama_pengirim" 
                               name="nama_pengirim" 
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200">
                    </div>
                    <div>
                        <label for="nominal_pembayaran" class="block mb-2 text-sm font-medium text-gray-900">Nominal Pembayaran</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">Rp</span>
                            <input type="text" 
                                   id="nominal_pembayaran" 
                                   name="nominal_pembayaran" 
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 pl-10 transition-all duration-200" 
                                   required 
                                   onkeyup="formatNominal(this)"
                                   onchange="formatNominal(this)">
                        </div>
                    </div>
                    <div>
                        <label for="bukti_pembayaran" class="block mb-2 text-sm font-medium text-gray-900">Bukti Pembayaran (Opsional)</label>
                        <input type="file" id="bukti_pembayaran" name="bukti_pembayaran" accept="image/*" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-3 transition-all duration-200">
                        <p class="mt-1 text-sm text-gray-500">Format: JPG, JPEG, PNG (Max. 5MB) - Opsional</p>
                    </div>
                </div>
                <div class="flex items-center justify-end p-6 space-x-3 border-t border-gray-200 rounded-b">
                    <button type="button" onclick="closeModal('paymentModal')" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 transition-all duration-200">
                        Batal
                    </button>
                    <button type="submit" class="text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center transition-all duration-200">
                        Simpan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Table -->
<div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden transition-all duration-200 hover:shadow-xl">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">No. Formulir</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nama Lengkap</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Jurusan</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total Biaya</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Total Dibayar</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Sisa</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Verifikator</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Aksi</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200" id="paymentTableBody">
                <% payments.forEach(payment => { %>
                    <tr class="hover:bg-gray-50 transition-all duration-200 transform hover:scale-[1.01]">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            <%= payment.no_formulir %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= payment.nama_lengkap %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= payment.jurusan %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_biaya) %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_verified) %>
                            <% if (payment.total_pending > 0) { %>
                                <br>
                                <span class="text-xs text-gray-500">
                                    (Pending: Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_pending) %>)
                                </span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.sisa_pembayaran) %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <% if (payment.status_pelunasan === 'LUNAS') { %>
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    Lunas
                                </span>
                            <% } else { %>
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                    Belum Lunas
                                </span>
                            <% } %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= payment.nama_verifikator || '-' %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                <a href="/dashboard/admin/pembayaran/<%= payment.id_pembayaran %>" 
                                   class="text-blue-600 hover:text-blue-800 transition-colors duration-200">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <% if (payment.total_verified > 0) { %>
                                    <a href="/dashboard/admin/pembayaran/cetak-kuitansi/<%= payment.id_pembayaran %>" 
                                       target="_blank"
                                       class="text-green-600 hover:text-green-800 transition-colors duration-200">
                                        <i class="fas fa-print"></i>
                                    </a>
                                <% } %>
                                <button onclick="confirmDelete('<%= payment.id_pembayaran %>')"
                                        class="text-red-600 hover:text-red-800 transition-colors duration-200">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script>
// Initialize payments data from server
const allPayments = JSON.parse('<%- JSON.stringify(payments) %>').map(payment => ({
    ...payment,
    created_at: payment.created_at ? new Date(payment.created_at) : null
}));
let activeTab = 'today';

function switchTab(tab) {
    activeTab = tab;
    
    // Update tab styles
    const tabs = {
        'today': 'todayTab',
        'all': 'allTab',
        'lunas': 'lunasTab',
        'belum-lunas': 'belumLunasTab'
    };
    
    Object.values(tabs).forEach(tabId => {
        const element = document.getElementById(tabId);
        if (tabId === tabs[tab]) {
            element.classList.add('bg-green-100', 'text-green-800');
            element.classList.remove('text-gray-600', 'hover:bg-gray-100');
        } else {
            element.classList.remove('bg-green-100', 'text-green-800');
            element.classList.add('text-gray-600', 'hover:bg-gray-100');
        }
    });
    
    filterData();
}

function filterData() {
    const searchText = $('#searchInput').val().toLowerCase();
    let filteredData = [...allPayments];
    
    // Filter based on active tab
    switch (activeTab) {
        case 'today':
            const today = new Date();
            today.setHours(0, 0, 0, 0); // Set to start of day
            
            // Filter payments made today based on detail_pembayaran_pendaftaran
            filteredData = filteredData.filter(payment => {
                if (!payment.detail_pembayaran || !payment.detail_pembayaran.length) return false;
                
                // Check if any payment detail is from today
                return payment.detail_pembayaran.some(detail => {
                    if (!detail.tanggal_pembayaran) return false;
                    const paymentDate = new Date(detail.tanggal_pembayaran);
                    paymentDate.setHours(0, 0, 0, 0); // Set to start of day
                    return paymentDate.getTime() === today.getTime();
                });
            });

            // Update nominal_pembayaran to show only today's payments
            filteredData = filteredData.map(payment => {
                const todayPayments = payment.detail_pembayaran.filter(detail => {
                    if (!detail.tanggal_pembayaran) return false;
                    const paymentDate = new Date(detail.tanggal_pembayaran);
                    paymentDate.setHours(0, 0, 0, 0);
                    return paymentDate.getTime() === today.getTime();
                });

                return {
                    ...payment,
                    total_verified: todayPayments.reduce((sum, detail) => 
                        sum + (parseFloat(detail.nominal_pembayaran) || 0), 0)
                };
            });
            break;
        case 'lunas':
            filteredData = filteredData.filter(payment => 
                payment.status_pelunasan === 'LUNAS'
            );
            break;
        case 'belum-lunas':
            filteredData = filteredData.filter(payment => 
                payment.status_pelunasan === 'BELUM_LUNAS'
            );
            break;
        // 'all' tab shows everything, so no additional filtering needed
    }
    
    // Apply search filter if there's search text
    if (searchText) {
        filteredData = filteredData.filter(payment => 
            payment.nama_lengkap.toLowerCase().includes(searchText) ||
            payment.no_formulir.toString().includes(searchText)
        );
    }
    
    renderTable(filteredData);
    updateStats(filteredData);
}

function renderTable(data) {
    const tbody = $('#paymentTableBody');
    tbody.empty();
    
    data.forEach(payment => {
        const row = `
            <tr class="hover:bg-gray-50 transition-all duration-200 transform hover:scale-[1.01]">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    ${payment.no_formulir}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    ${payment.nama_lengkap}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    ${payment.jurusan}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    Rp ${new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_biaya)}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    Rp ${new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_verified)}
                    ${payment.total_pending > 0 ? `
                        <br>
                        <span class="text-xs text-gray-500">
                            (Pending: Rp ${new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_pending)})
                        </span>
                    ` : ''}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    Rp ${new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.sisa_pembayaran)}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full ${
                        payment.status_pelunasan === 'LUNAS' 
                            ? 'bg-green-100 text-green-800' 
                            : 'bg-yellow-100 text-yellow-800'
                    }">
                        ${payment.status_pelunasan === 'LUNAS' ? 'Lunas' : 'Belum Lunas'}
                    </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    ${payment.nama_verifikator || '-'}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end space-x-2">
                        <a href="/dashboard/admin/pembayaran/${payment.id_pembayaran}" 
                           class="text-blue-600 hover:text-blue-800 transition-colors duration-200">
                            <i class="fas fa-eye"></i>
                        </a>
                        ${payment.total_verified > 0 ? `
                            <a href="/dashboard/admin/pembayaran/cetak-kuitansi/${payment.id_pembayaran}" 
                               target="_blank"
                               class="text-green-600 hover:text-green-800 transition-colors duration-200">
                                <i class="fas fa-print"></i>
                            </a>
                        ` : ''}
                        <button onclick="confirmDelete(${payment.id_pembayaran})"
                                class="text-red-600 hover:text-red-800 transition-colors duration-200">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        `;
        tbody.append(row);
    });
}

function updateStats(data) {
    const totalPembayaran = data.length;
    const totalLunas = data.filter(p => p.status_pelunasan === 'LUNAS').length;
    const totalBelumLunas = data.filter(p => p.status_pelunasan === 'BELUM_LUNAS').length;
    
    // Calculate total uang from total_verified
    const totalUang = data.reduce((sum, payment) => sum + (parseFloat(payment.total_verified) || 0), 0);

    // Update statistics cards
    $('.total-pembayaran').text(totalPembayaran);
    $('.total-lunas').text(totalLunas);
    $('.total-belum-lunas').text(totalBelumLunas);
