function showToast(message, type = 'success') {
    const toast = $('#toast');
    const toastContent = toast.find('div').first();
    const bgClass = type === 'success' ? 'bg-green-500' : 'bg-red-500';
    const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
    
    toastContent.removeClass('bg-green-500 bg-red-500').addClass(bgClass);
    toast.find('i').removeClass('fa-check-circle fa-exclamation-circle').addClass(icon);
    $('#toastMessage').text(message);
    
    // Show toast
    toast.removeClass('hidden');
    setTimeout(() => {
        toastContent.removeClass('translate-x-full');
    }, 100);
    
    // Hide after 3 seconds
    setTimeout(() => {
        toastContent.addClass('translate-x-full');
        setTimeout(() => {
            toast.addClass('hidden');
        }, 300);
    }, 3000);
}

function handleSubmit(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    
    // Get selected CPDB's total biaya
    const selectedOption = $('#id_user option:selected');
    const totalBiaya = selectedOption.data('biaya');
    
    // Get nominal pembayaran and remove formatting
    const nominalPembayaran = unformatNominal($('#nominal_pembayaran').val());
    
    // Validate nominal pembayaran
    if (!nominalPembayaran) {
        showToast('Nominal pembayaran harus diisi', 'error');
        return;
    }
    
    if (parseInt(nominalPembayaran) > parseInt(totalBiaya)) {
        showToast('Nominal pembayaran tidak boleh melebihi total biaya', 'error');
        return;
    }
    
    // Get metode_pembayaran
    const metodePembayaran = $('#metode_pembayaran').val();
    if (!metodePembayaran) {
        showToast('Metode pembayaran harus dipilih', 'error');
        return;
    }

    // Get nama_pengirim if metode_pembayaran is TRANSFER
    const namaPengirim = $('#nama_pengirim').val();
    if (metodePembayaran === 'TRANSFER' && !namaPengirim) {
        showToast('Nama pengirim harus diisi untuk pembayaran transfer', 'error');
        return;
    }

    // Set values in formData
    formData.set('id_user', selectedOption.val());
    formData.set('total_biaya', totalBiaya);
    formData.set('nominal_pembayaran', nominalPembayaran);
    formData.set('metode_pembayaran', metodePembayaran);
    formData.set('nama_pengirim', namaPengirim || '');
    
    // If no file is selected, remove bukti_pembayaran from formData
    if (!$('#bukti_pembayaran')[0].files[0]) {
        formData.delete('bukti_pembayaran');
    }
    
    $.ajax({
        url: '/api/admin/pembayaran',
        type: 'POST',
        data: formData,
        processData: false,
        contentType: false,
        success: function(response) {
            closeModal('paymentModal');
            showToast('Pembayaran berhasil ditambahkan');
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        },
        error: function(xhr) {
            showToast(xhr.responseJSON?.message || 'Terjadi kesalahan saat menambahkan pembayaran', 'error');
        }
    });
}

function toggleNamaPengirim() {
    const metodePembayaran = $('#metode_pembayaran').val();
    const namaPengirimContainer = $('#nama_pengirim_container');
    const namaPengirimInput = $('#nama_pengirim');
    
