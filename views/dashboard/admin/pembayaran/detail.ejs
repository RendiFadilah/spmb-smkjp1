<script>
let currentDetailId = null;
let currentStatus = null;

async function handleDelete(detailId) {
if (!detailId) return;

// Show confirmation dialog in center
Swal.fire({
    title: 'Konfirmasi',
    text: 'Apakah anda yakin ingin menghapus data pembayaran ini?',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#DC2626',
    cancelButtonColor: '#6B7280',
    confirmButtonText: 'Ya, Hapus',
    cancelButtonText: 'Batal',
    customClass: {
        popup: 'rounded-xl',
        confirmButton: 'rounded-lg',
        cancelButton: 'rounded-lg'
    }
}).then(async (result) => {
    if (result.isConfirmed) {
        try {
            const response = await fetch(`/api/admin/pembayaran/delete/${detailId}`, {
                method: 'DELETE',
                credentials: 'include',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            if (!response.ok) {
                const result = await response.json();
                throw new Error(result.message || 'Terjadi kesalahan saat menghapus detail pembayaran');
            }

            // Show success toast in top-right
            showToast('Data pembayaran berhasil dihapus');

            // Reload after short delay
            setTimeout(() => {
                window.location.reload();
            }, 1000);

        } catch (error) {
            console.error('Error:', error);
            // Show error toast in top-right
            showToast(error.message || 'Terjadi kesalahan saat menghapus detail pembayaran', 'error');
        }
    }
});
}

function showToast(message, type = 'success') {
Toastify({
    text: message,
    duration: 3000,
    gravity: "top",
    position: "right",
    backgroundColor: type === 'success' ? "#16a34a" : "#ef4444",
    className: "rounded-lg shadow-lg",
}).showToast();
}

function verifyPayment(detailId, status) {
currentDetailId = detailId;
currentStatus = status;

const modal = document.getElementById('verificationModal');
const modalContent = document.getElementById('modalContent');
const title = document.getElementById('modalTitle');

title.textContent = status === 'VERIFIED' ? 'Verifikasi Pembayaran' : 'Tolak Pembayaran';
modal.classList.remove('hidden');
modal.classList.add('flex');

setTimeout(() => {
    modalContent.classList.add('modal-open');
}, 10);
}

function closeVerificationModal() {
const modal = document.getElementById('verificationModal');
const modalContent = document.getElementById('modalContent');

modalContent.classList.remove('modal-open');

setTimeout(() => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.getElementById('catatan').value = '';
}, 200);
}

async function submitVerification() {
try {
    // Show loading state
    const submitBtn = document.querySelector('#verificationModal button:last-child');
    const originalText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = `
        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span class="ml-2">Memproses...</span>
    `;

    const catatan = document.getElementById('catatan').value;
    
    const response = await fetch(`/api/admin/pembayaran/verify/${currentDetailId}`, {
        credentials: 'include',
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            status: currentStatus,
            catatan: catatan
        })
    });

    const result = await response.json();
    
    if (!response.ok) {
        throw new Error(result.message || 'Terjadi kesalahan saat memverifikasi pembayaran');
    }

    // Show success message
    showToast(currentStatus === 'VERIFIED' ? 
        'Pembayaran berhasil diverifikasi' : 
        'Pembayaran berhasil ditolak'
    );

    // Close modal and reload after short delay
    setTimeout(() => {
        closeVerificationModal();
        window.location.reload();
    }, 1000);

} catch (error) {
    console.error('Error:', error);
    showToast(error.message || 'Terjadi kesalahan saat memproses pembayaran', 'error');
    
    // Reset button state
    const submitBtn = document.querySelector('#verificationModal button:last-child');
    submitBtn.disabled = false;
    submitBtn.innerHTML = originalText;
}
}

function showProofModal(imagePath) {
const modal = document.getElementById('proofModal');
const modalContent = document.getElementById('proofModalContent');
const proofImage = document.getElementById('proofImage');

proofImage.src = imagePath;

modal.classList.remove('hidden');
modal.classList.add('flex');
setTimeout(() => {
    modalContent.classList.add('modal-open');
}, 10);

modal.addEventListener('click', (e) => {
    if (e.target === modal) {
        closeProofModal();
    }
});
}

function closeProofModal() {
const modal = document.getElementById('proofModal');
const modalContent = document.getElementById('proofModalContent');

modalContent.classList.remove('modal-open');
setTimeout(() => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.getElementById('proofImage').src = '';
}, 200);
}

function printReceipt() {
// Open receipt in new window
const receiptUrl = `/dashboard/admin/pembayaran/cetak-kuitansi/<%= payment.id_pembayaran %>`;
window.open(receiptUrl, '_blank');
}
</script>


