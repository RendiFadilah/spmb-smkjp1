<!-- Payment Info Card -->
<div class="p-6 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-4 bg-gray-50 rounded-lg">
            <p class="text-sm font-medium text-gray-500 mb-1">Nomor Formulir</p>
            <p class="text-lg font-semibold text-gray-800"><%= payment.no_formulir %></p>
        </div>
        <div class="p-4 bg-gray-50 rounded-lg">
            <p class="text-sm font-medium text-gray-500 mb-1">Nama Lengkap</p>
            <p class="text-lg font-semibold text-gray-800"><%= payment.nama_lengkap %></p>
        </div>
        <div class="p-4 bg-gray-50 rounded-lg">
            <p class="text-sm font-medium text-gray-500 mb-1">Jurusan</p>
            <p class="text-lg font-semibold text-gray-800"><%= payment.jurusan %></p>
        </div>
        <!-- Updated biaya section to show base price and discount -->
        <div class="p-4 bg-gray-50 rounded-lg">
            <p class="text-sm font-medium text-gray-500 mb-1">Rincian Biaya</p>
            <div class="space-y-1">
                <p class="text-sm text-gray-600">
                    Biaya Dasar: 
                    <span class="font-medium">
                        Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.base_biaya) %>
                    </span>
                </p>
                <p class="text-sm text-green-600">
                    Diskon: 
                    <span class="font-medium">
                        Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.nominal_diskon) %>
                    </span>
                </p>
                <p class="text-base font-semibold text-gray-800">
                    Total Biaya: 
                    <span>
                        Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_biaya) %>
                    </span>
                </p>
            </div>
        </div>
        <div class="col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4">
            <% transactions.forEach((trx, index) => { %>
                <% if (trx.status_verifikasi === 'VERIFIED') { %>
                    <div class="p-4 bg-gray-50 rounded-lg">
                        <p class="text-sm font-medium text-gray-500 mb-1">Pembayaran ke-<%= index + 1 %></p>
                        <p class="text-lg font-semibold text-green-600">
                            Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(trx.nominal_pembayaran) %>
                            <span class="text-sm text-gray-500">(<%= trx.formatted_date %>)</span>
                        </p>
                    </div>
                <% } %>
            <% }) %>
            <div class="p-4 bg-gray-50 rounded-lg">
                <p class="text-sm font-medium text-gray-500 mb-1">Total Dibayar</p>
                <p class="text-lg font-semibold text-green-600">
                    Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.total_verified) %>
                </p>
            </div>
            <div class="p-4 bg-gray-50 rounded-lg">
                <p class="text-sm font-medium text-gray-500 mb-1">Sisa Pembayaran</p>
                <p class="text-lg font-semibold text-red-600">
                    Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0 }).format(payment.sisa_pembayaran) %>
                </p>
            </div>
        </div>
        <div class="p-4 bg-gray-50 rounded-lg col-span-2">
            <p class="text-sm font-medium text-gray-500 mb-2">Status Pembayaran</p>
            <% if (payment.status_pelunasan === 'LUNAS') { %>
                <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-green-700 bg-green-100 rounded-full">
                    <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Lunas
                </span>
            <% } else { %>
                <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-orange-700 bg-orange-100 rounded-full">
                    <svg class="w-4 h-4 mr-1.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                    </svg>
                    Belum Lunas
                </span>
            <% } %>
        </div>
    </div>
</div>

<!-- Transaction List -->
<div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-200">
    <div class="p-6 border-b border-gray-100">
        <h3 class="text-xl font-semibold text-gray-800">
            Riwayat Pembayaran
        </h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead>
                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase bg-gray-50 border-b border-gray-100">
                    <th class="px-6 py-4">Tanggal</th>
                    <th class="px-6 py-4">Metode</th>
                    <th class="px-6 py-4">Nominal</th>
                    <th class="px-6 py-4">Bukti</th>
                    <th class="px-6 py-4">Status</th>
                    <th class="px-6 py-4">Aksi</th>
