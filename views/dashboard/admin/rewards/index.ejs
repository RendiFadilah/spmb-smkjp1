            <i class="fas fa-times"></i>
        </button>
    </div>
    <!-- Export and Add Buttons -->
    <div class="flex gap-2">
        <!-- Export Today Button -->
        <a href="/api/admin/rewards/export/today" 
           class="inline-flex items-center px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
            <i class="fas fa-file-excel mr-2"></i>
            Export Hari Ini
