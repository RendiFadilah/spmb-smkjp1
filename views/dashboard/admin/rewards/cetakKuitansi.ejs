<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kuitansi Reward SPMB</title>
    <link rel="icon" type="image/png" href="/images/logo-jp1.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />
    <style>
        * {
            font-family: 'Poppins', sans-serif;
        }
        
        @page {
            size: A5 landscape;
            margin: 0;
        }
        
        .watermark {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            font-size: 60px;
            color: rgba(75, 85, 99, 0.05);
            white-space: nowrap;
            pointer-events: none;
            z-index: 1;
            width: 100%;
            text-align: center;
            font-weight: 700;
            line-height: 1;
            letter-spacing: -1px;
        }

        .content-wrapper {
            position: relative;
            z-index: 0;
            background-color: transparent !important;
        }
        
        @media print {
            body {
                print-color-adjust: exact;
                -webkit-print-color-adjust: exact;
                background: transparent;
            }
            .print-landscape {
                width: 210mm;
                height: 148mm;
                padding: 12px;
                overflow: hidden;
                background: transparent !important;
            }
            .watermark {
                display: block !important;
                color: rgba(75, 85, 99, 0.07) !important;
                -webkit-print-color-adjust: exact !important;
                print-color-adjust: exact !important;
            }
            .content-wrapper {
                background: transparent !important;
            }
            .no-print {
                display: none !important;
            }
        }
    </style>
</head>
<body class="bg-transparent min-h-screen">
    <!-- Watermark -->
    <div class="watermark">SMK Jakarta Pusat 1</div>

    <div class="print-landscape max-w-[800px] mx-auto rounded-lg overflow-hidden my-8 print:my-0 content-wrapper">
        <!-- Main Content -->
        <div class="p-4">
            <!-- Header -->
            <div class="flex items-center justify-between border-b border-gray-200 pb-2 mb-3">
                <div class="flex items-center gap-2">
                    <img src="/images/logo-jp1.png" alt="Logo SMK JT1" class="w-10 h-10 object-contain">
                    <div>
                        <h1 class="text-base font-bold text-gray-900 leading-tight">SMK Jakarta Pusat 1</h1>
                        <p class="text-[10px] text-gray-600 leading-tight">Jl. Abdul Muis No. 44, Jakarta Pusat | WhatsApp : 085213819519</p>
                    </div>
                </div>
                <div class="text-right">
                    <h2 class="text-lg font-bold text-gray-900 leading-tight">KUITANSI REWARD</h2>
                    <p class="text-xs text-gray-600">SPMB 2025/2026</p>
                </div>
            </div>

            <!-- Receipt Content -->
            <div class="space-y-2">
                <div class="grid grid-cols-1 gap-2">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-xs font-medium text-gray-500">No. Formulir</p>
                            <p class="text-sm font-semibold text-gray-900" id="noFormulir"></p>
                        </div>
                        <div>
                            <p class="text-xs font-medium text-gray-500">Sudah Terima Dari</p>
                            <p class="text-sm font-semibold text-gray-900">SMK Jakarta Pusat 1</p>
                        </div>
                    </div>

                    <div>
                        <p class="text-xs font-medium text-gray-500">Nama CPDB</p>
                        <p class="text-sm font-semibold text-gray-900" id="namaCPDB"></p>
                    </div>

                    <!-- Amount Box -->
                    <div class="bg-gradient-to-r from-green-50/80 to-green-100/80 rounded-lg p-3">
                        <div class="flex justify-between items-center">
                            <div class="space-y-0.5">
                                <p class="text-xs font-medium text-gray-500">Nominal Reward</p>
                                <p class="text-xl font-bold text-gray-900" id="nominal">Rp </p>
                                <p class="text-xs text-gray-600 italic" id="terbilang"></p>
                            </div>
                        </div>
                    </div>

                    <!-- Reward Details -->
                    <div>
                        <p class="text-xs font-medium text-gray-500 mb-1">Keterangan:</p>
                        <div id="rewardDetails" class="space-y-1">
                            <p class="text-xs text-gray-600" id="keterangan"></p>
                            <p class="text-xs text-gray-600">No. WhatsApp: <span id="noWa" class="font-medium"></span></p>
                        </div>
                    </div>
                </div>

                <!-- Signature -->
                <div class="flex justify-between mt-4">
                    <div class="text-center">
                        <p class="text-xs text-gray-600" id="tanggalTTD">Jakarta, </p>
                        <p class="text-xs font-medium text-gray-500 mt-2 mb-8">Penerima</p>
                        <p class="text-xs font-semibold text-gray-900" id="namaPembawa"></p>
                    </div>
                    <div class="text-center">
                        <p class="text-xs text-gray-600">&nbsp;</p>
                        <p class="text-xs font-medium text-gray-500 mt-2 mb-8">Petugas</p>
                        <p class="text-xs font-semibold text-gray-900" id="namaPetugas"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>
    <script>
        function numberToWords(num) {
            const units = ['', 'Satu', 'Dua', 'Tiga', 'Empat', 'Lima', 'Enam', 'Tujuh', 'Delapan', 'Sembilan'];
            const teens = ['Sepuluh', 'Sebelas', 'Dua Belas', 'Tiga Belas', 'Empat Belas', 'Lima Belas', 'Enam Belas', 'Tujuh Belas', 'Delapan Belas', 'Sembilan Belas'];
            const tens = ['', '', 'Dua Puluh', 'Tiga Puluh', 'Empat Puluh', 'Lima Puluh', 'Enam Puluh', 'Tujuh Puluh', 'Delapan Puluh', 'Sembilan Puluh'];
            
            if (num === 0) return 'Nol';
            
            function convertLessThanOneThousand(n) {
                if (n === 0) return '';
                if (n < 10) return units[n];
                if (n < 20) return teens[n - 10];
                if (n < 100) return tens[Math.floor(n / 10)] + (n % 10 !== 0 ? ' ' + units[n % 10] : '');
                if (n === 100) return 'Seratus';
                return units[Math.floor(n / 100)] + ' Ratus' + (n % 100 !== 0 ? ' ' + convertLessThanOneThousand(n % 100) : '');
            }
            
            let words = '';
            let billions = Math.floor(num / 1000000000);
            let millions = Math.floor((num % 1000000000) / 1000000);
            let thousands = Math.floor((num % 1000000) / 1000);
            let remainder = num % 1000;
            
            if (billions) words += convertLessThanOneThousand(billions) + ' Milyar ';
            if (millions) words += convertLessThanOneThousand(millions) + ' Juta ';
            if (thousands) words += convertLessThanOneThousand(thousands) + ' Ribu ';
            if (remainder) words += convertLessThanOneThousand(remainder);
            
            return words.trim();
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const options = { day: 'numeric', month: 'long', year: 'numeric' };
            return date.toLocaleDateString('id-ID', options);
        }

        // Fetch kuitansi data from API
        async function fetchKuitansiData() {
            try {
                const id_reward = window.location.pathname.split('/').pop();
                const response = await fetch(`/api/admin/rewards/${id_reward}`);
                if (!response.ok) {
                    throw new Error('Failed to fetch kuitansi data');
                }
                const data = await response.json();
                
                // Fill in the receipt details
                document.getElementById('noFormulir').textContent = data.no_formulir;
                document.getElementById('namaCPDB').textContent = data.jurusan ? `${data.nama_cpdb} - ${data.jurusan}` : data.nama_cpdb;
                document.getElementById('nominal').textContent = 'Rp ' + parseInt(data.nominal).toLocaleString('id-ID');
                document.getElementById('terbilang').textContent = numberToWords(parseInt(data.nominal)) + ' Rupiah';
                document.getElementById('tanggalTTD').textContent = 'Jakarta, ' + formatDate(data.tanggal_reward);
                document.getElementById('namaPetugas').textContent = data.nama_petugas;
                document.getElementById('namaPembawa').textContent = data.nama_pembawa;
                document.getElementById('keterangan').textContent = data.keterangan_pembawa;
                document.getElementById('noWa').textContent = data.no_wa_pembawa;

                // Auto print after data is loaded
                setTimeout(() => {
                    window.print();
                }, 500);
            } catch (error) {
                console.error('Error fetching kuitansi data:', error);
                alert('Terjadi kesalahan saat mengambil data kuitansi');
            }
        }

        // Load data when page loads
        window.onload = fetchKuitansiData;
    </script>
</body>
</html>
