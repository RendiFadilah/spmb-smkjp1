<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - SPMB SMK Jakarta Pusat 1</title>
    <link rel="icon" type="image/png" href="/images/logo-jp1.png">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: { sans: ['Inter', 'sans-serif'] },
            colors: {
              brand: {
                50: '#eef2ff', 100: '#e0e7ff', 200: '#c7d2fe', 300: '#a5b4fc',
                400: '#818cf8', 500: '#6366f1', 600: '#4f46e5', 700: '#4338ca',
                800: '#3730a3', 900: '#312e81', 950: '#1e1b4b'
              }
            }
          }
        }
      }
    </script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <style>
        body { font-family: 'Inter', sans-serif; }

        /* Select2 Custom */
        .select2-container--default .select2-selection--single {
            height: 42px; padding: 7px; border-color: #e2e8f0; border-radius: 0.75rem;
        }
        .select2-container--default .select2-selection--single .select2-selection__arrow { height: 40px; }
        .select2-dropdown { border-color: #e2e8f0; border-radius: 0.75rem; box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1); }
        .select2-search__field { border-radius: 0.5rem !important; padding: 0.5rem !important; }
        .select2-results__option { padding: 0.5rem 0.75rem !important; }

        /* Sidebar scrollbar */
        .sidebar-scroll::-webkit-scrollbar { width: 4px; }
        .sidebar-scroll::-webkit-scrollbar-track { background: transparent; }
        .sidebar-scroll::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.08); border-radius: 10px; }
        .sidebar-scroll::-webkit-scrollbar-thumb:hover { background: rgba(255,255,255,0.15); }

        /* Dashboard content animation */
        .dashboard-content { animation: fadeSlideIn 0.4s ease-out; }
        @keyframes fadeSlideIn {
            from { opacity: 0; transform: translateY(8px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Dropdown panel animation */
        .dropdown-panel {
            opacity: 0; visibility: hidden; transform: translateY(-4px) scale(0.98);
            transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
        }
        .dropdown-panel.active {
            opacity: 1; visibility: visible; transform: translateY(0) scale(1);
        }

        /* Sidebar submenu */
        .sidebar-submenu {
            max-height: 0; overflow: hidden;
            transition: max-height 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }
        .sidebar-submenu.open { max-height: 300px; }

        /* Mobile sidebar overlay */
        .sidebar-overlay {
            opacity: 0; visibility: hidden; transition: all 0.3s ease;
        }
        .sidebar-overlay.active { opacity: 1; visibility: visible; }
    </style>
</head>
<body class="bg-gray-50/80 min-h-screen">

    <!-- ===== SIDEBAR ===== -->
    <aside id="sidebar" class="fixed top-0 left-0 z-40 w-[270px] h-screen transition-transform -translate-x-full lg:translate-x-0">
        <div class="flex flex-col h-full bg-slate-900">
            <!-- Sidebar Header / Logo -->
            <div class="flex items-center gap-3 px-6 py-5 border-b border-white/[0.06]">
                <div class="w-10 h-10 bg-gradient-to-br from-brand-500 to-brand-600 rounded-xl flex items-center justify-center shadow-lg shadow-brand-500/20 shrink-0">
                    <img src="/images/logo-jp1.png" class="h-6 w-auto" alt="Logo">
                </div>
                <div class="min-w-0">
                    <h1 class="text-sm font-bold text-white truncate">SPMB SMK JP 1</h1>
                    <p class="text-[10px] text-slate-400 font-medium">Admin Panel</p>
                </div>
                <button id="closeSidebar" class="lg:hidden ml-auto w-8 h-8 flex items-center justify-center rounded-lg hover:bg-white/10 text-slate-400 transition-colors">
                    <i class="fas fa-times text-sm"></i>
                </button>
            </div>

            <!-- Sidebar Nav -->
            <nav class="flex-1 px-4 py-5 sidebar-scroll overflow-y-auto">
                <% if (user.roles === 'Petugas' || user.roles === 'Admin' || user.roles === 'Bendahara') { %>
                    <%- include('../partials/sidebar-admin', { currentPath }) %>
                <% } else { %>
                    <%- include('../partials/sidebar-' + user.roles.toLowerCase(), { currentPath }) %>
                <% } %>
            </nav>

            <!-- Sidebar Footer -->
            <div class="px-4 py-4 border-t border-white/[0.06]">
                <div class="flex items-center gap-3 px-2">
                    <div class="w-9 h-9 rounded-xl bg-gradient-to-br from-brand-400 to-brand-600 flex items-center justify-center text-white text-sm font-bold shrink-0 shadow-lg shadow-brand-500/20">
                        <%= (user.nama_lengkap || user.nama).split(' ')[0].charAt(0).toUpperCase() %>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-semibold text-white truncate"><%= (user.nama_lengkap || user.nama).split(' ').slice(0,2).join(' ') %></p>
                        <p class="text-[11px] text-slate-400"><%= user.roles %></p>
                    </div>
                    <form id="logoutFormSidebar" action="/auth/logout" method="POST" class="shrink-0">
                        <button type="button" onclick="confirmLogout()" class="w-8 h-8 flex items-center justify-center rounded-lg hover:bg-red-500/10 text-slate-400 hover:text-red-400 transition-all" title="Logout">
                            <i class="fas fa-arrow-right-from-bracket text-sm"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </aside>

    <!-- Mobile Overlay -->
    <div id="sidebarOverlay" class="sidebar-overlay fixed inset-0 bg-black/50 backdrop-blur-sm z-30 lg:hidden"></div>

    <!-- ===== TOP NAVBAR ===== -->
    <header class="fixed top-0 right-0 left-0 lg:left-[270px] z-20 bg-white/80 backdrop-blur-xl border-b border-gray-200/60">
        <div class="flex items-center justify-between h-16 px-4 sm:px-6">
            <div class="flex items-center gap-3">
                <button id="openSidebar" class="lg:hidden w-9 h-9 flex items-center justify-center rounded-xl hover:bg-gray-100 text-gray-500 transition-colors">
                    <i class="fas fa-bars text-base"></i>
                </button>
                <div class="hidden sm:flex items-center gap-2 text-sm">
                    <a href="/dashboard/admin" class="text-gray-400 hover:text-brand-600 transition-colors">
                        <i class="fas fa-house text-xs"></i>
                    </a>
                    <i class="fas fa-chevron-right text-[8px] text-gray-300"></i>
                    <span class="text-gray-600 font-medium"><%= title.split(' - ')[0] %></span>
                </div>
            </div>

            <div class="flex items-center gap-2">
                <button class="relative w-9 h-9 flex items-center justify-center rounded-xl hover:bg-gray-100 text-gray-400 hover:text-gray-600 transition-colors">
                    <i class="fas fa-bell text-base"></i>
                    <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full ring-2 ring-white"></span>
                </button>

                <div class="relative">
                    <button id="profileBtn" class="flex items-center gap-2.5 pl-2 pr-3 py-1.5 rounded-xl hover:bg-gray-100 transition-all duration-200">
                        <div class="w-8 h-8 rounded-xl bg-gradient-to-br from-brand-400 to-brand-600 flex items-center justify-center text-white text-xs font-bold shadow-sm">
                            <%= (user.nama_lengkap || user.nama).split(' ')[0].charAt(0).toUpperCase() %>
                        </div>
                        <div class="hidden md:block text-left">
                            <p class="text-sm font-semibold text-gray-700 leading-tight"><%= (user.nama_lengkap || user.nama).split(' ').slice(0,2).join(' ') %></p>
                            <p class="text-[11px] text-gray-400 leading-tight"><%= user.roles %></p>
                        </div>
                        <i class="fas fa-chevron-down text-[10px] text-gray-400 ml-0.5 transition-transform duration-200" id="profileChevron"></i>
                    </button>

                    <div id="profileDropdown" class="dropdown-panel absolute top-full right-0 mt-2 w-56 bg-white rounded-2xl shadow-xl shadow-gray-200/50 border border-gray-100 overflow-hidden">
                        <div class="p-4 bg-gradient-to-r from-brand-600 to-brand-700">
                            <p class="text-sm font-bold text-white"><%= user.nama_lengkap || user.nama %></p>
                            <p class="text-xs text-brand-200 mt-0.5"><%= user.roles %></p>
                        </div>
                        <div class="p-2">
                            <a href="/dashboard/admin/settings" class="flex items-center gap-3 px-3 py-2.5 text-sm text-gray-600 rounded-xl hover:bg-gray-50 transition-colors">
                                <i class="fas fa-gear text-gray-400 w-4"></i> Pengaturan
                            </a>
                            <form action="/auth/logout" method="POST">
                                <button type="submit" class="flex items-center gap-3 w-full px-3 py-2.5 text-sm text-red-600 rounded-xl hover:bg-red-50 transition-colors">
                                    <i class="fas fa-arrow-right-from-bracket w-4"></i> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- ===== MAIN CONTENT ===== -->
    <main class="lg:ml-[270px] pt-16 min-h-screen">
        <div class="p-4 sm:p-6 lg:p-8">
            <div class="dashboard-content">
                <%- body %>
            </div>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>
    <script>
        // Sidebar toggle (mobile)
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        const openBtn = document.getElementById('openSidebar');
        const closeBtn = document.getElementById('closeSidebar');

        function openSidebarFn() {
            sidebar.classList.remove('-translate-x-full');
            overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        function closeSidebarFn() {
            sidebar.classList.add('-translate-x-full');
            overlay.classList.remove('active');
            document.body.style.overflow = '';
        }
        if (openBtn) openBtn.addEventListener('click', openSidebarFn);
        if (closeBtn) closeBtn.addEventListener('click', closeSidebarFn);
        if (overlay) overlay.addEventListener('click', closeSidebarFn);

        // Profile dropdown
        const profileBtn = document.getElementById('profileBtn');
        const profileDropdown = document.getElementById('profileDropdown');
        const profileChevron = document.getElementById('profileChevron');

        if (profileBtn) {
            profileBtn.addEventListener('click', () => {
                profileDropdown.classList.toggle('active');
                profileChevron.style.transform = profileDropdown.classList.contains('active') ? 'rotate(180deg)' : '';
            });
            document.addEventListener('click', (e) => {
                if (!profileBtn.contains(e.target) && !profileDropdown.contains(e.target)) {
                    profileDropdown.classList.remove('active');
                    profileChevron.style.transform = '';
                }
            });
        }

        // confirmLogout is defined in sidebar-admin.ejs
    </script>
</body>
</html>
